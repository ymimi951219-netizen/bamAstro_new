---
interface Props {
  title: string;
  description: string;
  datePublished: string;
  dateModified: string;
  author: string;
  url: string;
  image?: string;
}

const { title, description, datePublished, dateModified, author, url, image } = Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "datePublished": datePublished,
  "dateModified": dateModified,
  "author": {
    "@type": "Person",
    "name": author
  },
  "url": url,
  ...(image && { "image": image }),
  "publisher": {
    "@type": "Organization",
    "name": "서우실장",
    "logo": {
      "@type": "ImageObject",
      "url": "/favicon.svg"
    }
  }
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
