---
import type { RegionConfig } from '../../types/region';

interface Props {
  items?: { name: string; url: string }[];
  region?: RegionConfig;
}
const { items, region } = Astro.props;
const navItems = items || (region ? region.venueTypes.map(v => ({ name: v.name, url: `/${v.slug}` })) : []);
const schema = {
  "@context": "https://schema.org",
  "@type": "SiteNavigationElement",
  name: "Main Navigation",
  hasPart: navItems.map(item => ({
    "@type": "WebPage",
    name: item.name,
    url: item.url,
  })),
};
---
<script type="application/ld+json" set:html={JSON.stringify(schema)} />
