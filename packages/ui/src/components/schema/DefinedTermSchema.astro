---
interface Props {
  terms: { term: string; definition: string; url?: string }[];
}
const { terms } = Astro.props;
const schema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  itemListElement: terms.map((t, i) => ({
    "@type": "ListItem",
    position: i + 1,
    item: {
      "@type": "DefinedTerm",
      name: t.term,
      description: t.definition,
      ...(t.url && { url: t.url }),
    },
  })),
};
---
<script type="application/ld+json" set:html={JSON.stringify(schema)} />
