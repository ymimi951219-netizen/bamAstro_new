---
import type { RegionConfig } from '../../types/region';

interface Props {
  region: RegionConfig;
}

const { region } = Astro.props;

const galleryImages = Array.from({ length: 10 }, (_, i) => ({
  id: i + 1,
  src: `/images/partners/partner_${i + 1}.webp`,
  alt: `${region.name} 제휴 업소 ${i + 1}`,
}));

const doubled = [...galleryImages, ...galleryImages];
---

<section class="py-24 bg-slate-950 relative overflow-hidden">
    <div class="container mx-auto px-4 mb-12 text-center relative z-10">
        <span class="text-red-500 font-bold tracking-widest uppercase mb-2 block">아가씨 갤러리</span>
        <h2 class="text-4xl md:text-6xl font-black text-white">
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-rose-600">{region.name} 갤러리</span>
        </h2>
        <p class="text-slate-400 mt-4">제휴 업소의 실제 사진을 확인하세요</p>
    </div>

    <div class="gallery-track-wrapper overflow-hidden">
        <div class="gallery-track flex gap-4">
            {doubled.map((img) => (
                <div class="gallery-item shrink-0 w-[250px] md:w-[300px] rounded-2xl overflow-hidden border border-slate-800">
                    <img
                        src={img.src}
                        alt={img.alt}
                        width="300"
                        height="450"
                        loading="lazy"
                        style="display:block; width:100%; height:450px; object-fit:cover;"
                    />
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    @keyframes marquee {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
    }
    .gallery-track {
        animation: marquee 40s linear infinite;
    }
    .gallery-track:hover {
        animation-play-state: paused;
    }
</style>
