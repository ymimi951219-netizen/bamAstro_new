---
import type { RegionConfig } from '../../types/region';
import { Phone, MapPin, Beer, UserCheck, CalendarCheck, CheckCircle2 } from 'lucide-astro';

interface Props {
  region: RegionConfig;
}

const { region } = Astro.props;

const steps = [
  {
    step: "01",
    title: "문의 및 예약",
    description: "전화 또는 카카오톡으로 인원과 도착 시간을 알려주세요. 고객님의 취향에 맞는 룸을 추천해 드립니다.",
    icon: Phone
  },
  {
    step: "02",
    title: "방문 및 픽업",
    description: "도착 10분 전 연락주시면 발렛 파킹 안내 및 입구 픽업을 도와드립니다.",
    icon: MapPin
  },
  {
    step: "03",
    title: "초이스 및 세팅",
    description: "담당 매니저의 추천 브리핑과 함께 최적의 파트너를 선택합니다.",
    icon: UserCheck
  },
  {
    step: "04",
    title: "즐거운 시간",
    description: "최고의 음향 시설과 안주, 주류와 함께 프라이빗한 시간을 즐기세요.",
    icon: Beer
  }
];
---

<section class="py-32 bg-slate-950 relative">
    <div class="container mx-auto px-4 max-w-4xl relative z-10">
        <div class="text-center mb-20">
            <span class="text-red-500 font-bold tracking-[0.2em] uppercase mb-4 block">Process</span>
            <h2 class="text-4xl md:text-5xl font-black text-white">
                VIP <span class="text-slate-500 line-through decoration-red-500 decoration-4">COMPLEX</span> SIMPLE
            </h2>
            <p class="text-slate-400 mt-4">복잡한 과정 없이, 오직 즐거움에만 집중하세요.</p>
        </div>

        <div class="relative">
            <!-- Vertical Line -->
            <div class="absolute left-[2rem] md:left-1/2 top-0 bottom-0 w-px bg-gradient-to-b from-red-600/0 via-red-600/50 to-red-600/0 md:-translate-x-1/2"></div>

            <div class="space-y-12">
                {steps.map((step, index) => (
                    <div class={`relative flex flex-col md:flex-row gap-8 items-start ${index % 2 === 1 ? 'md:flex-row-reverse' : ''}`}>
                         
                        <!-- Timeline Node & Icon -->
                        <div class="absolute left-[2rem] md:left-1/2 -translate-x-1/2 w-4 h-4 rounded-full bg-red-600 border-4 border-slate-950 z-20 mt-1.5"></div>
                        
                        <!-- Content Box -->
                        <div class="ml-16 md:ml-0 md:w-1/2 flex flex-col items-start md:items-end 
                            ${index % 2 === 0 ? 'md:pr-12 md:items-end md:text-right' : 'md:pl-12 md:items-start md:text-left'}">
                            
                            <div class="bg-slate-900 border border-slate-800 p-8 rounded-2xl w-full hover:border-red-500/50 transition-colors group">
                                <span class="text-red-500 font-black text-5xl opacity-20 absolute top-4 right-6 group-hover:opacity-40 transition-opacity">{step.step}</span>
                                <div class="w-12 h-12 bg-slate-800 rounded-xl flex items-center justify-center text-white mb-6 group-hover:bg-red-600 transition-colors">
                                    <step.Icon class="w-6 h-6" />
                                </div>
                                <h3 class="text-xl font-bold text-white mb-3">{step.title}</h3>
                                <p class="text-slate-400 leading-relaxed">{step.description}</p>
                            </div>
                        </div>

                        <!-- Empty space for the other side (desktop only) -->
                        <div class="hidden md:block md:w-1/2"></div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>
