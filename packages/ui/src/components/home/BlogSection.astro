---
import { Clock, ArrowRight, Sparkles, TrendingUp, BookOpen } from 'lucide-astro';

// Supabase BlogPost interface
interface SupabaseBlogPost {
  id: string;
  title: string;
  slug: string;
  excerpt: string;
  category: string;
  read_time: string;
  featured: boolean;
  gradient: string;
  featured_image: string | null;
  published_at: string | null;
  created_at: string;
}

interface Props {
  posts?: SupabaseBlogPost[];
}

const { posts = [] } = Astro.props;

// If no posts, don't render the section
if (posts.length === 0) {
  return;
}

// Format date helper
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('ko-KR', { year: 'numeric', month: '2-digit', day: '2-digit' }).replace(/\. /g, '.').replace(/\.$/, '');
}

// Use real posts (limit to 4 for homepage display)
const blogPosts = posts.slice(0, 4);
const featuredPost = blogPosts.find(p => p.featured) || blogPosts[0];
const regularPosts = blogPosts.filter(p => p.id !== featuredPost?.id).slice(0, 3);
---

<section class="py-28 bg-transparent relative overflow-hidden">
  <!-- Background Decorations -->
  <div class="absolute top-20 right-0 w-[500px] h-[500px] bg-purple-600/5 rounded-full blur-[120px] pointer-events-none"></div>
  <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-fuchsia-600/5 rounded-full blur-[100px] pointer-events-none"></div>

  <div class="container mx-auto px-4 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-20">
      <div class="inline-flex items-center gap-2 bg-purple-500/10 border border-purple-500/20 px-5 py-2 rounded-full mb-6 backdrop-blur-sm">
        <BookOpen class="w-4 h-4 text-purple-400" />
        <span class="text-purple-300 text-sm font-medium tracking-wide">인사이더 팁 & 가이드</span>
      </div>
      <h2 class="text-4xl md:text-6xl font-extrabold text-white mb-6 leading-tight">
        알아두면 좋은
        <span class="block text-transparent bg-clip-text bg-gradient-to-r from-purple-300 via-fuchsia-400 to-violet-500">
          프리미엄 인사이트
        </span>
      </h2>
      <p class="text-slate-400 text-lg max-w-2xl mx-auto leading-relaxed">
        15년 업계 경험을 바탕으로 한 <strong class="text-white">실전 가이드</strong>와 <strong class="text-white">최신 트렌드</strong>를 공유합니다.
      </p>
    </div>

    <!-- Blog Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 max-w-7xl mx-auto">

      <!-- Featured Post (Large) -->
      {featuredPost && (
        <article class="lg:col-span-7 group">
          <a href={`/blog/${featuredPost.slug}`} class="block h-full">
            <div class="relative h-full min-h-[480px] rounded-3xl overflow-hidden border border-slate-800/50 bg-gradient-to-br from-slate-900/80 to-slate-800/40 backdrop-blur-xl hover:border-purple-500/40 transition-all duration-500 hover:shadow-[0_0_60px_rgba(168,85,247,0.15)]">
              <!-- Background Image -->
              {featuredPost.featured_image && (
                <img
                  src={featuredPost.featured_image}
                  alt={featuredPost.title}
                  class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                />
              )}

              <!-- Gradient Overlay -->
              <div class={`absolute inset-0 bg-gradient-to-t from-slate-950 via-slate-950/80 to-slate-950/40`}></div>
              <div class={`absolute inset-0 bg-gradient-to-br ${featuredPost.gradient || 'from-violet-600 to-purple-600'} opacity-10 group-hover:opacity-20 transition-opacity duration-500`}></div>

              <!-- Decorative Elements (only show when no image) -->
              {!featuredPost.featured_image && (
                <>
                  <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-bl from-purple-500/20 to-transparent rounded-full blur-3xl transform translate-x-20 -translate-y-20 group-hover:translate-x-10 transition-transform duration-700"></div>
                  <div class="absolute bottom-0 left-0 w-48 h-48 bg-gradient-to-tr from-fuchsia-500/10 to-transparent rounded-full blur-2xl"></div>
                </>
              )}

              <!-- Content -->
              <div class="relative z-10 p-10 h-full flex flex-col">
                <!-- Top Badge -->
                <div class="flex items-center gap-3 mb-8">
                  <span class="inline-flex items-center gap-1.5 bg-purple-500/20 border border-purple-500/30 text-purple-300 px-4 py-1.5 rounded-full text-sm font-medium">
                    <Sparkles class="w-3.5 h-3.5" />
                    추천
                  </span>
                  <span class="text-slate-500 text-sm">{formatDate(featuredPost.published_at || featuredPost.created_at)}</span>
                </div>

                <!-- Main Content -->
                <div class="flex-grow flex flex-col justify-end">
                  <span class="text-purple-400 font-bold tracking-wider text-sm uppercase mb-3">{featuredPost.category}</span>
                  <h3 class="text-3xl md:text-4xl font-bold text-white mb-5 leading-tight group-hover:text-purple-100 transition-colors">
                    {featuredPost.title}
                  </h3>
                  <p class="text-slate-400 text-lg leading-relaxed mb-8 max-w-xl">
                    {featuredPost.excerpt}
                  </p>

                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2 text-slate-500">
                      <Clock class="w-4 h-4" />
                      <span class="text-sm">{featuredPost.read_time} 읽기</span>
                    </div>
                    <span class="inline-flex items-center gap-2 text-purple-400 font-semibold group-hover:gap-4 transition-all">
                      자세히 보기 <ArrowRight class="w-5 h-5" />
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </article>
      )}

      <!-- Regular Posts (Stacked) -->
      <div class="lg:col-span-5 flex flex-col gap-6">
        {regularPosts.map((post, index) => (
          <article class="group flex-1">
            <a href={`/blog/${post.slug}`} class="block h-full">
              <div class="relative h-full rounded-2xl border border-slate-800/50 bg-slate-900/40 backdrop-blur-sm hover:border-purple-500/30 hover:bg-slate-800/40 transition-all duration-300 hover:shadow-lg overflow-hidden flex">
                <!-- Thumbnail Image -->
                {post.featured_image && (
                  <div class="relative w-28 flex-shrink-0 overflow-hidden">
                    <img
                      src={post.featured_image}
                      alt={post.title}
                      class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                    />
                    <div class="absolute inset-0 bg-gradient-to-r from-transparent to-slate-900/60"></div>
                  </div>
                )}

                <!-- Content -->
                <div class="relative flex-1 p-5">
                  <!-- Subtle Gradient (only when no image) -->
                  {!post.featured_image && (
                    <div class={`absolute inset-0 bg-gradient-to-r ${post.gradient || 'from-purple-600 to-indigo-600'} opacity-0 group-hover:opacity-5 transition-opacity duration-300`}></div>
                  )}

                  <div class="relative z-10">
                    <div class="flex items-center justify-between mb-3">
                      <span class="text-xs font-bold tracking-wider text-purple-400 uppercase bg-purple-500/10 px-2.5 py-1 rounded-full">
                        {post.category}
                      </span>
                      <span class="text-slate-600 text-xs">{formatDate(post.published_at || post.created_at)}</span>
                    </div>

                    <h3 class="text-lg font-bold text-white mb-2 group-hover:text-purple-200 transition-colors leading-snug line-clamp-1">
                      {post.title}
                    </h3>
                    <p class="text-slate-400 text-sm leading-relaxed line-clamp-2 mb-3">
                      {post.excerpt}
                    </p>

                    <div class="flex items-center justify-between">
                      <div class="flex items-center gap-1.5 text-slate-500">
                        <Clock class="w-3.5 h-3.5" />
                        <span class="text-xs">{post.read_time}</span>
                      </div>
                      <ArrowRight class="w-4 h-4 text-slate-600 group-hover:text-purple-400 group-hover:translate-x-1 transition-all" />
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>

    <!-- View All Button -->
    <div class="text-center mt-16">
      <a href="/blog" class="group inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-purple-600/20 to-fuchsia-600/20 border border-purple-500/30 rounded-2xl text-white font-semibold hover:from-purple-600/30 hover:to-fuchsia-600/30 hover:border-purple-500/50 transition-all duration-300 backdrop-blur-sm">
        <TrendingUp class="w-5 h-5 text-purple-400" />
        <span>모든 가이드 보기</span>
        <ArrowRight class="w-5 h-5 text-purple-400 group-hover:translate-x-1 transition-transform" />
      </a>
    </div>
  </div>
</section>

<style>
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
