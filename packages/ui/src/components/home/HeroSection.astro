---
import type { RegionConfig } from '../../types/region';
import { Crown, Phone, MessageCircle, ArrowDown, Sparkles, Star } from 'lucide-astro';

interface Props {
  region: RegionConfig;
}

const { region } = Astro.props;
---

<section class="min-h-screen relative flex items-center bg-transparent overflow-hidden pt-20">
    <!-- Background Patterns -->
    <div class="absolute inset-0 pointer-events-none">
        <div class="absolute top-0 right-0 w-[70%] h-full bg-gradient-to-l from-slate-900 via-transparent to-transparent opacity-50 z-10"></div>
        <!-- Huge Typographic Background -->
        <span class="absolute top-[10%] -right-[5%] text-[15rem] font-black text-slate-800/10 leading-none select-none pointer-events-none rotate-90 z-0">
            NIGHT<br/>LIFE
        </span>
        <div class="absolute inset-0 bg-[url('/noise.png')] opacity-10 mix-blend-overlay"></div>
    </div>

    <div class="container mx-auto px-4 relative z-20 h-full flex flex-col md:flex-row items-center gap-12">
        <!-- LEFT: Typography & Content (55%) -->
        <div class="flex-1 text-left space-y-8 md:pr-12">
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-red-600/10 border border-red-500/20 rounded-full text-red-400 text-sm font-bold tracking-widest uppercase animate-fade-in">
                <Crown class="w-4 h-4" />
                <span>Premium Hospitality</span>
            </div>

            <div class="relative">
                <h1 class="text-6xl md:text-8xl lg:text-9xl font-black text-white leading-[0.9] tracking-tighter">
                    GANGNAM<br />
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-500 via-rose-600 to-red-400">LUXURY</span>
                </h1>
                <p class="text-2xl md:text-3xl text-slate-400 font-light mt-6 max-w-xl leading-relaxed">
                    {region.name}의 밤을 새롭게 정의하다.<br/>
                    <span class="text-white font-medium">상위 1%를 위한 프라이빗 라운지</span>
                </p>
            </div>

            <div class="flex flex-wrap gap-4 pt-4">
                <a href={`tel:${region.phone}`} class="btn-primary px-10 py-5 text-xl rounded-full shadow-2xl shadow-red-900/30 hover:shadow-red-500/50 transition-all hover:-translate-y-1 flex items-center gap-3">
                    <Phone class="w-6 h-6" />
                    VIP 예약하기
                </a>
                <a href={region.kakaoLink} target="_blank" class="px-10 py-5 rounded-full bg-slate-800 border border-slate-700 hover:border-white/30 text-white text-xl font-bold transition-all hover:bg-slate-700 flex items-center gap-3">
                    <MessageCircle class="w-6 h-6" />
                    카카오톡 문의
                </a>
            </div>

            <!-- Trust Indicators -->
            <div class="flex items-center gap-6 pt-8 border-t border-white/5">
                <div class="flex -space-x-3">
                    {[1,2,3,4].map(() => (
                        <div class="w-10 h-10 rounded-full bg-slate-800 border-2 border-slate-900 flex items-center justify-center">
                            <Star class="w-4 h-4 text-slate-500" />
                        </div>
                    ))}
                    <div class="w-10 h-10 rounded-full bg-red-600 text-white flex items-center justify-center font-bold text-xs border-2 border-slate-900">
                        99+
                    </div>
                </div>
                <div>
                    <div class="flex items-center gap-1 text-yellow-500">
                        <Star class="w-4 h-4 fill-current" />
                        <Star class="w-4 h-4 fill-current" />
                        <Star class="w-4 h-4 fill-current" />
                        <Star class="w-4 h-4 fill-current" />
                        <Star class="w-4 h-4 fill-current" />
                    </div>
                    <p class="text-slate-400 text-sm">Verified Client Reviews</p>
                </div>
            </div>
        </div>

        <!-- RIGHT: Visual Element (45%) -->
        <div class="flex-1 relative h-[600px] w-full hidden md:block">
            <!-- Glass Morphism Abstract Shape -->
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[600px] bg-gradient-to-br from-red-600/30 to-slate-900/30 backdrop-blur-3xl rounded-[3rem] border border-white/10 rotate-[-6deg] animate-float z-10 shadow-2xl shadow-red-900/20"></div>
            
            <!-- Secondary Shape -->
            <div class="absolute top-1/2 left-1/2 -translate-x-1/4 -translate-y-1/3 w-[400px] h-[500px] bg-slate-800/50 backdrop-blur-xl rounded-[2rem] border border-white/5 rotate-[6deg] animate-float-delayed z-0"></div>

            <!-- Floating Stats Card -->
            <div class="absolute bottom-[15%] -left-[10%] bg-slate-900/90 backdrop-blur-md p-6 rounded-2xl border border-red-500/30 shadow-xl z-20 animate-fade-in-up">
                <div class="flex items-center gap-3 mb-2">
                    <Sparkles class="w-5 h-5 text-red-500" />
                    <span class="text-slate-300 font-bold uppercase text-xs tracking-wider">Today's Wait Time</span>
                </div>
                <p class="text-3xl font-black text-white">10 min<span class="text-red-500 text-lg">.</span></p>
            </div>
            
             <!-- Floating Badge -->
            <div class="absolute top-[20%] right-[0%] bg-white text-slate-950 p-4 rounded-full font-black text-xl rotate-12 shadow-2xl z-20 animate-bounce">
                OPEN<br/>NOW
            </div>
        </div>
    </div>
    
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
        <ArrowDown class="w-6 h-6 text-slate-500" />
    </div>
</section>
