---
import { Crown, MapPin, Zap, Users } from 'lucide-astro';

interface Props {
    regionName?: string;
    regionId?: string;
    stations?: string[];
    landmarks?: string[];
}

const {
    regionName = '분당',
    regionId = 'bundang',
    stations = ['서현역', '야탑역', '판교역'],
    landmarks = ['서현역 로데오거리', '야탑역 먹자골목', '판교테크노밸리']
} = Astro.props;

const stationText = stations.slice(0, 3).join('·');
const station1 = stations[0] || '서현역';
const station2 = stations[1] || '야탑역';

// 지역별 특화 콘텐츠
const regionContent: Record<string, {
    cityTitle: string;
    cityDesc: string;
    transitTitle: string;
    transitDesc: string;
    industryTitle: string;
    industryDesc: string;
}> = {
    bundang: {
        cityTitle: "판교테크노밸리 100만 IT도시",
        cityDesc: `경기 남부 IT 중심지 ${regionName}은 <strong class="text-purple-400">${stationText}</strong> 일대 상권이 촘촘하게 발달해 있습니다. 20년 이상 형성된 성숙한 상권으로 가라오케, 하이퍼블릭, 셔츠룸 등 다양한 업종이 밀집해 있어 <strong class="text-white">취향과 예산에 맞는 선택지</strong>가 풍부합니다. 특히 서현역 로데오거리는 젊은 층에게 인기 있는 핫플레이스입니다.`,
        transitTitle: `${station1}·${station2} 환승 허브`,
        transitDesc: `<strong class="text-purple-400">분당선·신분당선</strong>이 만나는 ${station1}은 경기남부 대표 교통 허브입니다. 강남에서 20분, 판교에서 10분 거리로 접근성이 뛰어나며, 심야에도 택시와 대리운전이 원활해 <strong class="text-white">야간 동선 설계</strong>가 수월합니다. 주차 공간도 여유롭게 확보되어 있습니다.`,
        industryTitle: "네이버·카카오 배후도시",
        industryDesc: `<strong class="text-purple-400">판교테크노밸리</strong>에는 네이버, 카카오, 엔씨소프트 등 1,500개 이상의 IT 기업이 입주해 있어 고소득 직장인 수요가 집중됩니다. 평일 회식과 비즈니스 접대 수요가 높아 <strong class="text-white">조용한 비즈니스 접대</strong>에 맞춘 프리미엄 시장이 형성되어 있습니다.`,
    },
    suwon: {
        cityTitle: "경기남부 130만 중심도시",
        cityDesc: `경기남부 중심도시 ${regionName}은 <strong class="text-purple-400">${stationText}</strong> 일대 상권이 촘촘하게 발달해 있습니다. 인계동, 권선동, 영통 등 각 지역마다 특색 있는 상권이 형성되어 있으며, 가라오케부터 하이퍼블릭까지 <strong class="text-white">취향과 예산에 맞는 선택지</strong>가 풍부합니다. 수원화성과 행궁동 카페거리도 데이트 코스로 인기입니다.`,
        transitTitle: `${station1} 5개 노선 환승`,
        transitDesc: `<strong class="text-purple-400">1호선·분당선·수인선·KTX·SRT</strong>가 만나는 ${station1}은 경기남부 대표 교통 허브입니다. 서울역에서 30분, 강남에서 40분 거리로 수도권 어디서든 접근이 용이합니다. 심야 택시와 대리운전 인프라가 잘 갖춰져 <strong class="text-white">야간 동선 설계</strong>가 수월합니다.`,
        industryTitle: "삼성전자 배후도시",
        industryDesc: `<strong class="text-purple-400">삼성디지털시티</strong>에는 삼성전자 본사와 10만 명 이상의 임직원이 근무하고 있어 고소득 직장인 수요가 집중됩니다. 광교테크노밸리, 수원산업단지 등 대형 사업장이 밀집해 <strong class="text-white">조용한 비즈니스 접대</strong>에 맞춘 프리미엄 시장이 형성되어 있습니다.`,
    },
    dongtan: {
        cityTitle: "동탄신도시 50만 신흥상권",
        cityDesc: `신도시 ${regionName}은 <strong class="text-purple-400">${stationText}</strong> 일대 상권이 빠르게 성장하고 있습니다. 동탄1신도시와 동탄2신도시를 합쳐 50만 인구가 거주하며, 메타폴리스와 카림애비뉴를 중심으로 신규 업소가 속속 오픈하고 있어 <strong class="text-white">취향과 예산에 맞는 선택지</strong>가 풍부합니다.`,
        transitTitle: `${station1}·${station2} 환승 허브`,
        transitDesc: `<strong class="text-purple-400">SRT·GTX-A</strong>가 만나는 ${station1}은 수도권 광역 교통 허브입니다. 삼성역까지 20분, 수서역까지 15분으로 강남 접근성이 뛰어나며, 동탄역 인근 주차시설과 택시 인프라가 잘 갖춰져 <strong class="text-white">야간 동선 설계</strong>가 수월합니다.`,
        industryTitle: "삼성·현대 배후신도시",
        industryDesc: `<strong class="text-purple-400">삼성전자·현대기아차</strong> 등 대형 사업장이 있어 30~40대 고소득 직장인 수요가 집중됩니다. 신도시 특성상 깔끔하고 모던한 인테리어의 업소가 많으며, <strong class="text-white">조용한 비즈니스 접대</strong>에 맞춘 프리미엄 시장이 형성되어 있습니다.`,
    },
};

// 해당 지역 콘텐츠 가져오기 (없으면 기본값)
const content = regionContent[regionId] || regionContent.bundang;

const cards = [
    {
        Icon: Crown,
        title: content.cityTitle,
        desc: content.cityDesc,
    },
    {
        Icon: MapPin,
        title: content.transitTitle,
        desc: content.transitDesc,
    },
    {
        Icon: Zap,
        title: content.industryTitle,
        desc: content.industryDesc,
    },
    {
        Icon: Users,
        title: "예산별 맞춤 추천",
        desc: `<strong class="text-purple-400">${station2} 실속형</strong>부터 <strong class="text-purple-400">${station1} 프리미엄</strong>까지 다양한 선택지를 제안합니다.`,
    }
];
---

<section class="py-24 bg-transparent">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16 relative">
            <span class="text-purple-400 font-bold tracking-[0.2em] text-sm md:text-base uppercase mb-3 animate-fade-in-up block">지역 특화 분석</span>
            <h2 class="text-4xl md:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-white via-slate-200 to-slate-400 relative z-10 animate-fade-in-up delay-100 drop-shadow-sm">왜 {regionName}인가?</h2>
            <div class="w-1 h-12 bg-gradient-to-b from-purple-500 to-transparent mx-auto mt-6"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
            {cards.map((card) => (
                <article class="bg-slate-800/30 p-8 rounded-2xl border border-slate-700 hover:border-purple-500/30 transition-all">
                    <div class="flex items-center gap-3 mb-4">
                        <div class="w-12 h-12 bg-purple-500/10 rounded-xl flex items-center justify-center text-purple-500">
                             <card.Icon class="w-6 h-6" />
                        </div>
                        <h3 class="text-xl font-bold text-white">{card.title}</h3>
                    </div>
                    <p class="text-slate-300 leading-relaxed" set:html={card.desc} />
                </article>
            ))}
        </div>
    </div>
</section>
