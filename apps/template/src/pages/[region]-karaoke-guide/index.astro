---
import { PageLayout, LocalBusinessSchema, BreadcrumbSchema, HowToSchema, FAQPageSchema, VenueCard, TableOfContents, RelatedServices, ArticleSchema, CollectionPageSchema, AggregateOfferSchema } from '@bamastro/ui';
import { region } from '@/config/region';
import { Sparkles, Mic2, Users, Star, HelpCircle, Phone, CheckCircle, ChevronRight, GlassWater } from 'lucide-astro';
import ExpertBio from '@/components/ExpertBio.astro';

export function getStaticPaths() {
  return [
    { params: { region: region.id } },
  ];
}

const { region: regionId } = Astro.params;
const venueType = region.venueTypes.find(v => v.id === 'karaoke');

if (!venueType) {
  throw new Error(`Venue type 'karaoke' not found in region config`);
}

const seoProps = {
  title: `${region.name} 가라오케 완벽 가이드 | ${region.nearbyStations[0]} 최고 음향·가격·추천`,
  description: `${region.name} 프리미엄 가라오케 완벽 가이드. ${region.nearbyStations.slice(0,2).join('·')} 최신 추천 6곳, 음향 시설, 가격, 예약 팁. 회식·파티 최적화. 지금 확인하세요!`,
  keywords: [
    `${region.name} 가라오케`,
    `${region.name} 노래방`,
    `${region.nearbyStations[0]} 가라오케`,
    `가라오케 가격`,
    `음향 좋은 노래방`
  ],
};

// HowTo Schema steps - 가라오케 이용 흐름
const usageSteps = [
  { name: "예약", text: "원하는 시간, 인원, 주류 종류(양주/맥주) 및 방문 목적을 전달합니다." },
  { name: "룸 배정", text: "예약 시간에 맞춰 원하는 컨셉의 룸이 준비됩니다." },
  { name: "기본 세팅", text: "선택한 양주/맥주 SET 음료, 안주, 과일이 제공됩니다." },
  { name: "노래 및 파티", text: "기본 2-3시간의 노래 시간이 제공됩니다." },
  { name: "연장 서빙", text: "즐거우면 추가 시간 연장이 가능합니다." }
];

const venues = [
    {
        id: 'k-1',
        name: `${region.name} 프리미엄 가라오케`,
        type: '메가 파티 룸',
        location: `${region.nearbyStations[0]} 인근`,
        price: '주대 18만원 이상, TC 10만원 이상',
        desc: `${region.nearbyStations[0]}에서 접근 좋은 파티형 가라오케. 도심 비즈니스 방문객 회식/모임에 맞춤 대형 룸.`,
        features: ['대형 룸', '음향 특화', `${region.nearbyStations[0]} 접근`, '회식 추천'],
        img: '/images/venues/karaoke_5.webp',
    },
    {
        id: 'k-2',
        name: `${region.nearbyStations[1]} 럭셔리 가라오케`,
        type: '럭셔리 라운지',
        location: `${region.nearbyStations[1]} 인근`,
        price: '주대 18만원 이상, TC 10만원 이상',
        desc: `${region.nearbyStations[1]} 라운지 톤 가라오케. 음향 퀄리티와 조용한 대화 모두 만족.`,
        features: ['라운지 무드', '고급 사운드', `${region.nearbyStations[1]} 중심`, '프라이빗'],
        img: '/images/venues/karaoke_6.webp',
    }
];

const faqList = [
    {
        question: `${region.name} 가라오케 1인 방문도 가능한가요?`,
        answer: `네, 가능합니다. ${region.name} 상권은 도심 비즈니스 방문객 이용이 많아 도시형 응대로 1:1 시작도 부담 없이 안내합니다.`
    },
    {
        question: `${region.name} 가라오케 픽업은 어디까지 지원되나요?`,
        answer: `픽업은 ${region.nearbyStations.slice(0,3).join(', ')} 중심으로 운영됩니다. 정확한 동선은 예약 시 조율해 드립니다.`
    },
    {
        question: `${region.name} 가라오케 주대/TC 기준이 궁금해요.`,
        answer: "주대 18만원 이상, TC 10만원 이상 기준이며 시간·코스·인원에 따라 달라질 수 있습니다. 상세는 문의 부탁드립니다."
    }
];

const sections = [
    { id: "features", title: `1. ${region.name} 가라오케 특징` },
    { id: "recommendation", title: "2. 추천 업소 TOP 6" },
    { id: "pricing", title: "3. 이용 가격 및 시스템" },
    { id: "faq", title: "4. 이용 꿀팁 및 FAQ" }
];
---

<PageLayout {...seoProps} region={region}>
    <LocalBusinessSchema region={region} />
    <BreadcrumbSchema region={region} />
    <ArticleSchema
        title={seoProps.title}
        description={seoProps.description}
        datePublished="2024-02-01"
        dateModified={new Date().toISOString().split('T')[0]}
        author="서우실장"
        url={`https://${region.domain}/${region.id}-karaoke-guide`}
        image={`https://${region.domain}/og-karaoke.jpg`}
        keywords={seoProps.keywords}
    />
    <CollectionPageSchema
        name={`${region.name} 가라오케 가이드 - 추천 업소, 가격, 예약 팁`}
        description={seoProps.description}
        url={`https://${region.domain}/${region.id}-karaoke-guide`}
        image={`https://${region.domain}/og-karaoke.jpg`}
        items={[
            { name: "가라오케 정의 및 특징", description: "프리미엄 가라오케의 정의와 특징", url: `https://${region.domain}/${region.id}-karaoke-guide#features`, image: `https://${region.domain}/images/venues/karaoke_1.webp` },
            { name: "추천 업소 TOP 6", description: `${region.name} 최고의 프리미엄 가라오케 6곳`, url: `https://${region.domain}/${region.id}-karaoke-guide#recommendation` },
            { name: "가격 및 시스템", description: "주대, TC, 룸 타입별 가격 및 운영 정책", url: `https://${region.domain}/${region.id}-karaoke-guide#pricing` },
            { name: "FAQ 및 팁", description: "자주 묻는 질문과 서우실장의 팁", url: `https://${region.domain}/${region.id}-karaoke-guide#faq` }
        ]}
    />
    <AggregateOfferSchema
        priceCurrency="KRW"
        lowestPrice={180000}
        highestPrice={250000}
        offerCount={6}
        availability="InStock"
    />
    <HowToSchema
        name={`${region.name} 가라오케 이용 방법`}
        description="5단계로 완료하는 가라오케 이용 가이드. 예약부터 연장까지 완벽 안내."
        steps={usageSteps}
    />
    <FAQPageSchema items={faqList} />

    <div class="pt-24 md:pt-32 min-h-screen bg-transparent">
        <div class="container mx-auto px-4 pb-12 max-w-6xl">
            <!-- Section Title -->
            <div class="text-center mb-16 relative">
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-24 h-24 bg-rose-500/10 rounded-full blur-2xl"></div>
                <span class="text-red-500 font-bold tracking-[0.2em] text-sm md:text-base uppercase mb-3 animate-fade-in-up block">비교와 선택</span>
                <h1 class="text-4xl md:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-red-400 to-rose-600 relative z-10 animate-fade-in-up delay-100 drop-shadow-sm">{region.name} 프리미엄 가라오케(노래방) 완벽 가이드</h1>
                <div class="w-1 h-12 bg-gradient-to-b from-amber-500 to-transparent mx-auto mt-6"></div>
            </div>

            <!-- Intro Text -->
            <div class="mb-20 text-center max-w-4xl mx-auto animate-fade-in-up delay-200">
                <p class="text-xl text-slate-300 leading-relaxed font-light">
                    {region.name} 가라오케는 {region.nearbyStations.slice(0,2).join('·')} 중심 파티룸 위주 구성입니다.<br />
                    회식/모임에 맞춘 음향 세팅과 유연한 룸 타입을 안내합니다.<br />
                    주대 18만원 이상·TC 10만원 이상 기준이며 상세 견적은 문의 부탁드립니다.
                </p>
            </div>

            <!-- Why Choose Our Karaoke Section -->
            <div class="mb-12 bg-slate-900/30 p-8 rounded-2xl border border-slate-800/50 backdrop-blur-sm">
                <h2 class="text-2xl font-bold text-white mb-6">왜 {region.name} 가라오케를 선택해야 할까요?</h2>
                <div class="grid md:grid-cols-2 gap-6 text-slate-300">
                    <div class="space-y-4">
                        <div class="flex gap-3">
                            <span class="text-rose-500 text-xl">🎵</span>
                            <div>
                                <h3 class="font-bold text-white mb-1">최신 음향 시스템</h3>
                                <p class="text-sm text-slate-400">{region.name} 프리미엄 가라오케는 JBL, Bose 등 하이엔드 스피커와 최신 음향 믹서를 갖추고 있습니다.
                                강남 수준의 음질을 20% 저렴한 가격에 경험할 수 있습니다.</p>
                            </div>
                        </div>
                        <div class="flex gap-3">
                            <span class="text-rose-500 text-xl">🍾</span>
                            <div>
                                <h3 class="font-bold text-white mb-1">투명한 가격 정책</h3>
                                <p class="text-sm text-slate-400">주대 18만원부터 시작하며, 숨은 비용이 없는 정찰제로 운영됩니다.
                                예약 시 정확한 견적을 안내해 드려 예산 걱정 없이 즐기실 수 있습니다.</p>
                            </div>
                        </div>
                        <div class="flex gap-3">
                            <span class="text-rose-500 text-xl">👥</span>
                            <div>
                                <h3 class="font-bold text-white mb-1">다양한 룸 타입</h3>
                                <p class="text-sm text-slate-400">소규모(2-4인) 프라이빗 룸부터 대형(10-20인) 파티룸까지 목적에 맞는 공간을 선택할 수 있습니다.
                                회식, 생일파티, 비즈니스 모임 모두 대응 가능합니다.</p>
                            </div>
                        </div>
                    </div>
                    <div class="space-y-4">
                        <div class="flex gap-3">
                            <span class="text-rose-500 text-xl">🚗</span>
                            <div>
                                <h3 class="font-bold text-white mb-1">무료 픽업 서비스</h3>
                                <p class="text-sm text-slate-400">{region.nearbyStations.slice(0,3).join(', ')} 등 주요 역에서 무료 픽업 차량을 운영합니다.
                                예약 시 픽업 위치를 말씀해 주시면 대기 없이 바로 이동 가능합니다.</p>
                            </div>
                        </div>
                        <div class="flex gap-3">
                            <span class="text-rose-500 text-xl">⏰</span>
                            <div>
                                <h3 class="font-bold text-white mb-1">넉넉한 이용 시간</h3>
                                <p class="text-sm text-slate-400">기본 2-3시간 제공되며, 뒤에 예약이 없으면 서비스 시간을 팍팍 드립니다.
                                평일 낮 시간대는 4-5시간도 가능합니다.</p>
                            </div>
                        </div>
                        <div class="flex gap-3">
                            <span class="text-rose-500 text-xl">🎁</span>
                            <div>
                                <h3 class="font-bold text-white mb-1">생일 특별 혜택</h3>
                                <p class="text-sm text-slate-400">생일 고객에게는 샴페인 1병 또는 특별 케이크를 무료로 제공합니다.
                                예약 시 생일임을 말씀해 주세요.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Karaoke vs Other Venues -->
            <div class="mb-12 bg-slate-900/30 p-8 rounded-2xl border border-slate-800/50 backdrop-blur-sm">
                <h2 class="text-2xl font-bold text-white mb-6">{region.name} 가라오케 vs 다른 업종 비교</h2>
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr class="border-b border-slate-700">
                                <th class="py-3 px-4 text-rose-400">구분</th>
                                <th class="py-3 px-4 text-white">가라오케</th>
                                <th class="py-3 px-4 text-slate-400">하이퍼블릭</th>
                                <th class="py-3 px-4 text-slate-400">룸살롱</th>
                            </tr>
                        </thead>
                        <tbody class="text-sm text-slate-300">
                            <tr class="border-b border-slate-800">
                                <td class="py-3 px-4 font-bold">주요 목적</td>
                                <td class="py-3 px-4 text-rose-400 font-semibold">노래·춤·파티</td>
                                <td class="py-3 px-4">대화·술·초이스</td>
                                <td class="py-3 px-4">VIP 접대</td>
                            </tr>
                            <tr class="border-b border-slate-800 bg-slate-800/20">
                                <td class="py-3 px-4 font-bold">1인 평균 비용</td>
                                <td class="py-3 px-4 text-rose-400 font-semibold">20-30만원</td>
                                <td class="py-3 px-4">25-35만원</td>
                                <td class="py-3 px-4">40-60만원</td>
                            </tr>
                            <tr class="border-b border-slate-800">
                                <td class="py-3 px-4 font-bold">추천 인원</td>
                                <td class="py-3 px-4 text-rose-400 font-semibold">5-10명 (단체)</td>
                                <td class="py-3 px-4">2-4명 (소규모)</td>
                                <td class="py-3 px-4">3-6명 (비즈니스)</td>
                            </tr>
                            <tr class="border-b border-slate-800 bg-slate-800/20">
                                <td class="py-3 px-4 font-bold">분위기</td>
                                <td class="py-3 px-4 text-rose-400 font-semibold">시끌벅적·활기찬</td>
                                <td class="py-3 px-4">편안·캐주얼</td>
                                <td class="py-3 px-4">조용·고급스러운</td>
                            </tr>
                            <tr class="border-b border-slate-800">
                                <td class="py-3 px-4 font-bold">복장</td>
                                <td class="py-3 px-4 text-rose-400 font-semibold">편한 옷 OK</td>
                                <td class="py-3 px-4">캐주얼</td>
                                <td class="py-3 px-4">정장 권장</td>
                            </tr>
                            <tr class="bg-slate-800/20">
                                <td class="py-3 px-4 font-bold">이용 시간</td>
                                <td class="py-3 px-4 text-rose-400 font-semibold">2-3시간 (연장 가능)</td>
                                <td class="py-3 px-4">80-90분 (연장 가능)</td>
                                <td class="py-3 px-4">90-120분</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <p class="text-sm text-slate-400 mt-4">
                    💡 <strong>결론:</strong> {region.name} 가라오케는 회식, 생일파티, 친구 모임 등 <strong>5명 이상 단체가 신나게 놀기에 최적</strong>입니다.
                    노래가 메인이지만 매니저 동석 서비스도 포함되어 있어 하이퍼블릭의 장점도 함께 누릴 수 있습니다.
                </p>
            </div>

            <TableOfContents sections={sections} />

            <!-- 1. Definition - Featured Snippet Optimized -->
            <div id="features" class="mb-12 bg-slate-900/30 p-8 rounded-2xl border border-slate-800/50 backdrop-blur-sm hover:border-rose-500/20 transition-colors animate-fade-in-up delay-300">
                <h2 class="text-3xl font-bold text-white mb-6 flex items-center gap-3">
                    <div class="w-1.5 h-8 bg-rose-500 rounded-full"></div>
                    1. {region.name} 가라오케란?
                </h2>
                <div class="text-slate-300 leading-relaxed text-lg font-light space-y-4">
                    <!-- Snippet-optimized definition (40-60 words) -->
                    <div class="bg-slate-800/40 border-l-4 border-rose-500 p-4 rounded mb-6">
                        <p class="text-white font-semibold mb-2">정의</p>
                        <p>
                            <strong>{region.name} 가라오케는 프리미엄 음향 시설과 럭셔리 룸에서 즐기는 프라이빗 엔터테인먼트 공간입니다.</strong> 강남식 고급 사운드 시스템, 호텔급 안주, 다양한 룸 컨셉(비즈니스 라운지·파티룸)으로 구성되어 회식, 생일파티, 비즈니스 접대에 최적화되어 있습니다.
                        </p>
                    </div>
                    <p>
                        {region.name} 가라오케는 최신 음향 시설과 럭셔리 룸에서 즐기는 토탈 엔터테인먼트 공간입니다. 강남식 고급 음향 시스템과 호텔 셰프 수준의 고급 안주, 그리고 다양한 컨셉의 룸(비즈니스 라운지형·파티형)을 갖추고 있어 파티, 회식, 비즈니스 접대 모두에 활용됩니다.
                    </p>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
                        <div class="bg-slate-800 p-4 rounded-xl text-center border border-slate-700">
                            <Mic2 class="w-6 h-6 text-rose-500 mx-auto mb-2" />
                            <span class="block text-white font-bold mb-1">하이엔드 음향</span>
                            <span class="text-xs text-slate-400">최고급 음향 시스템</span>
                        </div>
                        <div class="bg-slate-800 p-4 rounded-xl text-center border border-slate-700">
                            <Users class="w-6 h-6 text-rose-500 mx-auto mb-2" />
                            <span class="block text-white font-bold mb-1">파티 & 비즈니스</span>
                            <span class="text-xs text-slate-400">모임 목적별 맞춤 룸</span>
                        </div>
                        <div class="bg-slate-800 p-4 rounded-xl text-center border border-slate-700">
                            <GlassWater class="w-6 h-6 text-rose-500 mx-auto mb-2" />
                            <span class="block text-white font-bold mb-1">프리미엄 주류 & 안주</span>
                            <span class="text-xs text-slate-400">호텔급 안주 & 주류</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 1-1. 가라오케 이용 흐름 - Step Snippet -->
            <div class="mb-12 bg-slate-900/30 p-8 rounded-2xl border border-slate-800/50 backdrop-blur-sm hover:border-rose-500/20 transition-colors">
                <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-3">
