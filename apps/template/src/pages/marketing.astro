---
import { PageLayout } from '@bamastro/ui';
import { region } from '@/config/region';
import { Rocket, Zap, FileText, Home, Heart, Check, Phone, MessageCircle, Send } from 'lucide-astro';

const seoProps = {
  title: '유흥 사이트 제작 및 SEO 마케팅 | 구글/네이버 순위 작업',
  description: '유흥업소 전문 홈페이지 제작 및 SEO 서비스. AI 콘텐츠, 블로그 운영, 렌탈 서비스. 서우실장 010-2626-4833',
  keywords: ['유흥 사이트 제작', '유흥 SEO', '유흥 마케팅', '유흥 홈페이지', '유흥업소 SEO'],
};

const features = [
  {
    icon: Zap,
    title: 'AI 콘텐츠 생성',
    description: '최신 AI 기술로 SEO에 최적화된 콘텐츠를 빠르게 생성합니다. 검색엔진이 좋아하는 양질의 콘텐츠로 빠른 순위 상승 효과.',
    color: 'purple',
  },
  {
    icon: FileText,
    title: '블로그 운영',
    description: '정기적인 블로그 포스팅으로 사이트의 신뢰도를 높입니다. 구글과 네이버 모두에서 좋은 SEO 시그널을 발생시킵니다.',
    color: 'blue',
  },
  {
    icon: Home,
    title: '렌탈 서비스',
    description: '이미 1페이지에 랭크된 사이트를 렌탈해 드립니다. 초기 비용 부담 없이 즉각적인 효과를 누리세요.',
    color: 'green',
  },
  {
    icon: Heart,
    title: '솔직한 약속',
    description: '1페이지 보장은 드리지 않습니다. 하지만 1페이지에 올리는 방법은 알고 있습니다. 허황된 약속보다 솔직한 전략을.',
    color: 'pink',
  },
];

const newSiteFeatures = [
  '호스팅, 도메인, DB 모두 고객 명의 계정에 설정',
  '사이트 소유권 100% 고객에게 귀속',
  '계약 종료 후에도 사이트 그대로 유지',
  '소스코드 및 모든 데이터 완전 양도',
  '유지보수 계약 별도 선택 가능',
];

const rentalBenefits = [
  '이미 1페이지에 랭크된 검증된 사이트',
  '즉시 트래픽 유입 효과',
  '초기 비용 대폭 절감',
  'SEO 작업 기다림 없이 바로 시작',
];
---

<PageLayout {...seoProps} region={region}>
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center bg-transparent overflow-hidden perspective-container py-20">
    <!-- Dynamic Background -->
    <div class="absolute inset-0 bg-transparent">
      <div class="absolute top-[10%] left-[10%] w-[40vw] h-[40vw] rounded-full bg-purple-600/10 blur-[100px] animate-float"></div>
      <div class="absolute bottom-[10%] right-[10%] w-[40vw] h-[40vw] rounded-full bg-fuchsia-900/20 blur-[100px] animate-float-delayed"></div>
      <div class="absolute top-[40%] left-[50%] transform -translate-x-1/2 w-[60vw] h-[30vw] rounded-full bg-violet-900/10 blur-[120px] animate-pulse-slow"></div>
      <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-10"></div>
      <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-slate-950/20"></div>
    </div>

    <div class="relative z-10 container mx-auto px-4 text-center mt-10">
      <div class="animate-fade-in-up">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 border border-purple-500/30 bg-purple-950/30 backdrop-blur-md px-6 py-2 rounded-full mb-8 hover:bg-purple-900/40 transition-colors animate-float">
          <Rocket class="w-4 h-4 text-purple-400" />
          <span class="text-purple-200 text-xs font-bold tracking-[0.2em] uppercase">마케팅 전문</span>
        </div>

        <h1 class="text-4xl md:text-6xl lg:text-7xl font-extrabold text-white mb-6 leading-tight drop-shadow-2xl">
          <span class="block text-white mb-2">구글/네이버</span>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-fuchsia-200 via-purple-400 to-violet-600">유흥 사이트 제작 및 순위 작업</span>
        </h1>

        <p class="text-slate-300 text-lg md:text-2xl max-w-3xl mx-auto mb-12 font-light leading-relaxed">
          신규 작업부터 기존 사이트 렌탈까지!
          <br />
          <span class="text-purple-400/80 mt-2 block text-base md:text-lg">유흥업소 전문 홈페이지 제작 및 SEO 마케팅</span>
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center flex-wrap">
          <a href={`tel:${region.phone}`} class="group relative px-8 py-4 btn-primary font-bold rounded-2xl transition-all hover:scale-105 shadow-[0_0_40px_rgba(168,85,247,0.3)] overflow-hidden flex items-center justify-center gap-3 min-w-[200px]">
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></div>
            <Phone class="w-5 h-5 group-hover:animate-wiggle relative z-10" />
            <span class="relative z-10">전화 상담</span>
          </a>
          <a href={region.kakaoLink} target="_blank" class="group px-8 py-4 bg-yellow-500/20 backdrop-blur-md text-yellow-100 font-bold rounded-2xl border border-yellow-500/30 hover:border-yellow-500/50 hover:bg-yellow-500/30 transition-all hover:-translate-y-1 flex items-center justify-center gap-3 min-w-[200px]">
            <MessageCircle class="w-5 h-5" />
            <span>카카오톡</span>
          </a>
          <a href={region.telegramLink} target="_blank" class="group px-8 py-4 bg-sky-500/20 backdrop-blur-md text-sky-100 font-bold rounded-2xl border border-sky-500/30 hover:border-sky-500/50 hover:bg-sky-500/30 transition-all hover:-translate-y-1 flex items-center justify-center gap-3 min-w-[200px]">
            <Send class="w-5 h-5" />
            <span>텔레그램</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 relative">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16 animate-fade-in-up">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">서비스 특징</h2>
        <p class="text-slate-400 text-lg max-w-2xl mx-auto">검증된 SEO 전략과 최신 기술로 효과적인 마케팅을 제공합니다.</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 animate-fade-in-up delay-100">
        {features.map((feature) => (
          <div class={`glass-card p-6 group hover:scale-105 transition-all duration-300 ${
            feature.color === 'purple' ? 'hover:border-purple-500/30 hover:shadow-purple-500/10' :
            feature.color === 'blue' ? 'hover:border-blue-500/30 hover:shadow-blue-500/10' :
            feature.color === 'green' ? 'hover:border-green-500/30 hover:shadow-green-500/10' :
            'hover:border-pink-500/30 hover:shadow-pink-500/10'
          }`}>
            <div class={`w-14 h-14 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300 ${
              feature.color === 'purple' ? 'bg-purple-500/20 text-purple-400' :
              feature.color === 'blue' ? 'bg-blue-500/20 text-blue-400' :
              feature.color === 'green' ? 'bg-green-500/20 text-green-400' :
              'bg-pink-500/20 text-pink-400'
            }`}>
              <feature.icon class="w-7 h-7" />
            </div>
            <h3 class="text-xl font-bold text-white mb-2">{feature.title}</h3>
            <p class="text-slate-400 text-sm leading-relaxed">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- New Site Creation Section -->
  <section class="py-20 relative">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="animate-fade-in-up">
          <div class="inline-flex items-center gap-2 border border-indigo-500/30 bg-indigo-950/30 backdrop-blur-md px-4 py-1.5 rounded-full mb-6">
            <span class="text-indigo-300 text-xs font-bold">신규 사이트 제작</span>
          </div>
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
            100% 고객 소유의<br />
            <span class="text-gradient">완전한 사이트</span>
          </h2>
          <p class="text-slate-400 text-lg mb-8">
            호스팅, 도메인, 데이터베이스 모두 고객 명의 계정에 설정합니다.
            계약 종료 후에도 사이트는 고객님의 것입니다.
          </p>

          <ul class="space-y-4">
            {newSiteFeatures.map((feature) => (
              <li class="flex items-start gap-3">
                <div class="w-6 h-6 rounded-full bg-green-500/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                  <Check class="w-4 h-4 text-green-400" />
                </div>
                <span class="text-slate-300">{feature}</span>
              </li>
            ))}
          </ul>
        </div>

        <div class="animate-fade-in-up delay-200">
          <div class="glass-card p-8 border-indigo-500/20 relative overflow-hidden">
            <div class="absolute top-0 right-0 w-40 h-40 bg-indigo-500/10 rounded-full blur-3xl"></div>
            <h3 class="text-2xl font-bold text-white mb-4 relative z-10">신규 제작 프로세스</h3>
            <div class="space-y-6 relative z-10">
              <div class="flex items-center gap-4">
                <div class="w-10 h-10 rounded-full bg-indigo-500/20 flex items-center justify-center text-indigo-400 font-bold">1</div>
                <div>
                  <h4 class="text-white font-semibold">상담 및 기획</h4>
                  <p class="text-slate-400 text-sm">원하는 키워드와 타겟 분석</p>
                </div>
              </div>
              <div class="flex items-center gap-4">
                <div class="w-10 h-10 rounded-full bg-indigo-500/20 flex items-center justify-center text-indigo-400 font-bold">2</div>
                <div>
                  <h4 class="text-white font-semibold">사이트 개발</h4>
                  <p class="text-slate-400 text-sm">SEO 최적화된 사이트 구축</p>
                </div>
              </div>
              <div class="flex items-center gap-4">
                <div class="w-10 h-10 rounded-full bg-indigo-500/20 flex items-center justify-center text-indigo-400 font-bold">3</div>
                <div>
                  <h4 class="text-white font-semibold">콘텐츠 및 SEO 작업</h4>
                  <p class="text-slate-400 text-sm">AI 콘텐츠 생성 및 순위 작업</p>
                </div>
              </div>
              <div class="flex items-center gap-4">
                <div class="w-10 h-10 rounded-full bg-green-500/20 flex items-center justify-center text-green-400 font-bold">4</div>
                <div>
                  <h4 class="text-white font-semibold">완전 양도</h4>
                  <p class="text-slate-400 text-sm">모든 권한 및 데이터 이전</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Rental Service Section -->
  <section class="py-20 relative">
    <div class="container mx-auto px-4">
      <div class="glass-card p-8 md:p-12 border-emerald-500/20 relative overflow-hidden animate-fade-in-up">
        <div class="absolute top-0 left-0 w-60 h-60 bg-emerald-500/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 right-0 w-40 h-40 bg-purple-500/10 rounded-full blur-3xl"></div>

        <div class="relative z-10 grid lg:grid-cols-2 gap-8 items-center">
          <div>
            <div class="inline-flex items-center gap-2 border border-emerald-500/30 bg-emerald-950/30 backdrop-blur-md px-4 py-1.5 rounded-full mb-6">
              <Home class="w-4 h-4 text-emerald-400" />
              <span class="text-emerald-300 text-xs font-bold">렌탈 서비스</span>
            </div>
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
              이미 1페이지에 있는<br />
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-emerald-300 to-green-500">검증된 사이트 렌탈</span>
            </h2>
            <p class="text-slate-400 text-lg mb-6">
              초기 비용이 부담되시나요? 이미 구글/네이버 1페이지에 랭크된 사이트를 렌탈해 드립니다.
              SEO 작업을 기다릴 필요 없이 즉시 효과를 보실 수 있습니다.
            </p>
          </div>

          <div class="space-y-4">
            {rentalBenefits.map((benefit) => (
              <div class="flex items-center gap-4 bg-white/5 backdrop-blur-sm rounded-xl p-4 hover:bg-white/10 transition-colors">
                <div class="w-8 h-8 rounded-full bg-emerald-500/20 flex items-center justify-center flex-shrink-0">
                  <Check class="w-5 h-5 text-emerald-400" />
                </div>
                <span class="text-white font-medium">{benefit}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 relative">
    <div class="container mx-auto px-4 max-w-4xl">
      <div class="text-center mb-12 animate-fade-in-up">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">연락처</h2>
        <p class="text-slate-400 text-lg">편하신 방법으로 언제든 문의해 주세요.</p>
      </div>

      <div class="grid md:grid-cols-3 gap-6 animate-fade-in-up delay-100">
        <!-- Phone Card -->
        <a href={`tel:${region.phone}`} class="glass-card p-8 group flex flex-col items-center justify-center hover:border-indigo-500/30 hover:shadow-indigo-500/10">
          <div class="w-16 h-16 rounded-full bg-indigo-500/20 flex items-center justify-center text-indigo-400 mb-4 group-hover:scale-110 transition-transform duration-300">
            <Phone class="w-8 h-8" />
          </div>
          <h3 class="text-lg font-bold text-white mb-2">전화 문의</h3>
          <p class="text-2xl font-bold text-gradient mb-2">{region.phoneFormatted}</p>
          <span class="text-xs text-slate-500">터치 시 바로 연결</span>
        </a>

        <!-- Kakao Card -->
        <a href={region.kakaoLink} target="_blank" class="glass-card p-8 group flex flex-col items-center justify-center border-yellow-500/10 hover:border-yellow-500/30 hover:shadow-yellow-500/10">
          <div class="w-16 h-16 rounded-full bg-yellow-500/20 flex items-center justify-center text-yellow-400 mb-4 group-hover:scale-110 transition-transform duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 3C6.48 3 2 6.48 2 10.76c0 2.79 1.86 5.28 4.73 6.75-.24.87-1.7 5.86-1.76 6.2 0 0-.04.28.18.36.17.06.36 0 .58-.29 3.65-2.45 5.29-3.79 6.27-4.48 9.53 1.22 11.74-5.91 9.74-8.54C20.61 6.55 16.63 3 12 3z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">카카오톡</h3>
          <p class="text-2xl font-bold text-white mb-2">{region.kakaoId}</p>
          <span class="text-xs text-slate-500">실시간 채팅 상담</span>
        </a>

        <!-- Telegram Card -->
        <a href={region.telegramLink} target="_blank" class="glass-card p-8 group flex flex-col items-center justify-center border-sky-500/10 hover:border-sky-500/30 hover:shadow-sky-500/10">
          <div class="w-16 h-16 rounded-full bg-sky-500/20 flex items-center justify-center text-sky-400 mb-4 group-hover:scale-110 transition-transform duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
              <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">텔레그램</h3>
          <p class="text-2xl font-bold text-white mb-2">{region.telegramId}</p>
          <span class="text-xs text-slate-500">해외에서도 상담 가능</span>
        </a>
      </div>

      <!-- Manager Info -->
      <div class="mt-12 glass p-8 rounded-2xl animate-fade-in-up delay-200 text-center">
        <h3 class="text-xl font-bold text-white mb-2">서우실장</h3>
        <p class="text-slate-400 text-sm mb-4">유흥 마케팅 전문 담당</p>
        <p class="text-slate-500 text-sm">
          365일 24시간 상담 가능 · 빠른 견적 안내
        </p>
      </div>
    </div>
  </section>
</PageLayout>
