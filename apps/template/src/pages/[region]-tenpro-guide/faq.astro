---
import { PageLayout, LocalBusinessSchema, FAQPageSchema, BreadcrumbSchema, BackToPillar, RelatedPosts } from '@bamastro/ui';
import { region } from '@/config/region';
import { Phone, ChevronRight } from 'lucide-astro';

export function getStaticPaths() {
  return [
    { params: { region: region.id } },
  ];
}

const { region: regionId } = Astro.params;

const faqList = [
    {
        question: `${region.name} 텐프로은 어떤 흐름으로 이용하나요?`,
        answer: "예약 후 좌석/룸 배정 → 음료 주문 → 서비스 이용 순으로 안내됩니다."
    },
    {
        question: "단체나 회식도 가능한가요?",
        answer: "가능합니다. 단체 룸과 맞춤 패키지가 준비되어 있습니다."
    },
    {
        question: "주대/TC 기준이 어떻게 되나요?",
        answer: "시간대와 인원에 따라 달라지며 상세는 전화 상담 시 안내드립니다."
    },
    {
        question: "예약 없이 방문해도 되나요?",
        answer: `평일에는 가능하지만 ${region.name} 상권 기준 주말은 예약을 추천합니다.`
    },
    {
        question: "카드 결제가 가능한가요?",
        answer: "대부분의 매장에서 신용카드 및 간편결제를 지원합니다."
    },
    {
        question: "주차가 가능한가요?",
        answer: "대부분의 매장에서 건물 내 주차장을 이용할 수 있습니다."
    }
];

const seoProps = {
  title: `${region.name} 텐프로 FAQ | 자주 묻는 질문과 답변`,
  description: `${region.name} 텐프로 자주 묻는 질문 완벽 해답. 예약·가격·시스템 기본 정보를 안내합니다.`,
  keywords: [`${region.name} 텐프로 FAQ`, `${region.name} 텐프로 자주 묻는 질문`, `${region.name} 텐프로 예약`],
};

const relatedItems = [
  {
    title: `${region.name} 텐프로 완벽 가이드`,
    href: `/${region.id}-tenpro-guide`,
    description: '텐프로 시스템, 가격, 추천 업소 정보',
    category: '텐프로'
  },
];
---

<PageLayout {...seoProps} region={region}>
    <LocalBusinessSchema region={region} />
    <BreadcrumbSchema region={region} />
    <FAQPageSchema items={faqList} />

    <div class="pt-24 md:pt-32 min-h-screen bg-transparent px-4 pb-20">
        <div class="container mx-auto max-w-4xl">
            <BackToPillar
                href={`/${region.id}-tenpro-guide`}
                title={`${region.name} 텐프로 완벽 가이드`}
                description="가격, 시스템, 추천 업소 정보 모두 보기"
                accentColor="purple"
            />

            <div class="text-center mb-16">
                <div class="flex justify-center mb-4">
                    <div class="w-1.5 h-12 bg-purple-500 rounded-full"></div>
                </div>
                <h1 class="text-3xl md:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-200 to-purple-500 mb-6">
                    텐프로 A to Z (FAQ)
                </h1>
                <p class="text-slate-400 text-lg leading-relaxed max-w-2xl mx-auto">
                    <strong class="text-white">{region.name} 텐프로</strong>을 200% 즐기는 방법을 알려드립니다.
                </p>
            </div>

            <div class="grid gap-6">
                {faqList.map((item) => (
                    <div class="bg-slate-900/50 p-6 rounded-2xl border border-slate-800 hover:border-purple-500/30 transition-all duration-300">
                        <h3 class="text-lg md:text-xl font-bold text-purple-400 mb-3 flex items-start gap-2">
                            <span class="bg-purple-500/10 p-1 rounded text-sm mt-1">Q</span>
                            {item.question}
                        </h3>
                        <p class="text-slate-300 leading-relaxed pl-8">
                            <span class="font-bold text-slate-500 mr-2">A.</span>
                            {item.answer}
                        </p>
                    </div>
                ))}
            </div>

            <div class="mt-16 text-center">
                <div class="flex flex-col md:flex-row justify-center gap-4">
                    <button onclick={`window.location.href = 'tel:${region.phone}'`} class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-4 px-8 rounded-xl flex items-center justify-center gap-2 transition-all shadow-lg hover:shadow-purple-500/25">
                        <Phone size={20} /> 실시간 예약 문의
                    </button>
                    <a href={`/${region.id}-tenpro-guide`} class="bg-slate-800 hover:bg-slate-700 text-white font-bold py-4 px-8 rounded-xl flex items-center justify-center gap-2 transition-all">
                        <ChevronRight size={20} /> 텐프로 메인으로
                    </a>
                </div>
            </div>

            <RelatedPosts items={relatedItems} title="다른 업종도 확인해보세요" accentColor="purple" />
        </div>
    </div>
</PageLayout>
