---
import { PageLayout, DefinedTermSchema, BreadcrumbSchema, RelatedServices } from '@bamastro/ui';
import { region } from '@/config/region';
import { getAllGlossaryTerms } from '@/content/glossary-terms';

export const prerender = true;

export function getStaticPaths() {
  const terms = getAllGlossaryTerms();
  return terms.map((t) => ({
    params: { term: t.term },
    props: { termData: t },
  }));
}

const { termData } = Astro.props;

const seoProps = {
  title: `${termData.term} 뜻 | ${region.name} 유흥 용어 사전`,
  description: `${termData.term}${termData.reading ? `(${termData.reading})` : ''}의 뜻과 사용법. ${termData.definition.slice(0, 100)}`,
  keywords: [
    `${termData.term} 뜻`,
    `${termData.term} 의미`,
    `유흥 용어 ${termData.term}`,
  ],
};

const relatedVenueTypes = region.venueTypes.filter((v) => termData.relatedVenues.includes(v.id));
---

<PageLayout {...seoProps} region={region}>
  <DefinedTermSchema
    terms={[{ term: termData.term, definition: termData.definition, url: `/glossary/${encodeURIComponent(termData.term)}` }]}
  />
  <BreadcrumbSchema region={region} items={[
    { name: '홈', url: '/' },
    { name: '용어 사전', url: '/glossary/' },
    { name: termData.term, url: `/glossary/${encodeURIComponent(termData.term)}` },
  ]} />

  <div class="pt-24 md:pt-32 min-h-screen bg-transparent">
    <div class="container mx-auto px-4 pb-12 max-w-6xl">
      <!-- Title -->
      <div class="text-center mb-16 relative">
        <span class="text-amber-400 font-bold tracking-[0.2em] text-sm md:text-base uppercase mb-3 block">용어 해설</span>
        <h1 class="text-4xl md:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-white via-slate-200 to-slate-400 drop-shadow-sm">
          {termData.term}
        </h1>
        {termData.reading && (
          <p class="text-slate-500 mt-2 text-lg">({termData.reading})</p>
        )}
        <div class="w-1 h-12 bg-gradient-to-b from-amber-500 to-transparent mx-auto mt-6"></div>
      </div>

      <!-- Definition -->
      <div class="mb-12 bg-slate-900/30 p-8 rounded-2xl border border-slate-800/50 backdrop-blur-sm">
        <h2 class="text-2xl font-bold text-white mb-4 flex items-center gap-3">
          <div class="w-1.5 h-8 bg-purple-500 rounded-full"></div>
          정의
        </h2>
        <p class="text-lg text-slate-300 leading-relaxed font-light">{termData.definition}</p>
      </div>

      <!-- Related Venues -->
      {relatedVenueTypes.length > 0 && (
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
            <div class="w-1.5 h-8 bg-purple-500 rounded-full"></div>
            관련 업종
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {relatedVenueTypes.map((v) => (
              <a href={`/${v.slug}`} class="bg-slate-900/30 p-5 rounded-xl border border-slate-800/50 hover:border-purple-500/30 transition-colors group">
                <h3 class="text-white font-bold group-hover:text-purple-400 transition-colors">{v.name}</h3>
                <p class="text-sm text-slate-400 mt-1">{v.subtitle}</p>
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- Back to Glossary -->
      <div class="mb-12 text-center">
        <a href="/glossary/" class="inline-flex items-center gap-2 text-purple-400 hover:text-purple-300 font-bold transition-colors">
          &larr; 용어 사전으로 돌아가기
        </a>
      </div>

      <RelatedServices region={region} />
    </div>
  </div>
</PageLayout>
