---
import { PageLayout, LocalBusinessSchema, BreadcrumbSchema, HowToSchema, FAQPageSchema, VenueCard, TableOfContents, RelatedServices } from '@bamastro/ui';
import { region } from '@/config/region';
import { Sparkles, CheckCircle, Star, HelpCircle, Phone, Crown, Shield } from 'lucide-astro';

export function getStaticPaths() {
  return [
    { params: { region: region.id } },
  ];
}

const { region: regionId } = Astro.params;
const venueType = region.venueTypes.find(v => v.id === 'roomsalon');

if (!venueType) {
  throw new Error(`Venue type 'roomsalon' not found in region config`);
}

const seoProps = {
  title: `${region.name} 룸살롱 가이드 | 비즈니스 접대 프리미엄 클럽`,
  description: `${region.name} 룸살롱(프리미엄 클럽) 완벽 가이드. 비즈니스 접대·VIP 예약·프라이빗 서비스 전문. ${region.nearbyStations.slice(0,2).join('·')} 추천. 가격·초이스·에티켓 상세 안내. 상담하기!`,
  keywords: [
    `${region.name} 룸살롱`,
    `프리미엄 클럽`,
    `비즈니스 접대 클럽`,
    `룸살롱 예약`,
    `비즈니스 에티켓`
  ],
};

// HowTo Schema steps - 룸살롱 예약 방법
const reservationSteps = [
  { name: "사전 예약", text: "100% 예약제 운영. 서우 실장에게 전화로 방문 목적과 인원을 전달해 주세요." },
  { name: "목적 공유", text: "비즈니스 접대, 회식, 개인 모임 등 방문 목적을 미리 알려주시면 맞춤 세팅을 준비합니다." },
  { name: "룸 배정", text: "손님 취향에 맞춘 프라이빗 룸, 주류, 안주가 세팅됩니다." },
  { name: "프라이빗 초이스", text: "룸 내에서 마담 인솔 하에 직접 초이스가 이루어집니다." }
];

const venues = [
    {
        id: 'rs-1',
        name: `${region.name} 룸살롱 - 로얄 비즈니스`,
        type: '하이엔드 비즈니스',
        location: `${region.name} 인근`,
        price: '주대 18만원 이상, TC 10만원 이상',
        desc: `${region.name} 비즈니스 룸살롱. 도심 비즈니스 방문객 접대/회의에 맞춘 세팅.`,
        features: ['비즈니스 세팅', '조용한 룸', '접근성 우수', '접대 중심'],
        img: '/images/venues/roomsalon_4.webp',
    },
    {
        id: 'rs-2',
        name: `${region.name} 룸살롱 - 레거시 클럽`,
        type: '전통 럭셔리',
        location: `${region.name} 중심상권`,
        price: '주대 18만원 이상, TC 10만원 이상',
        desc: `${region.name} 중심 하이엔드 룸살롱. 품격 있는 서비스와 프라이빗 룸.`,
        features: ['하이엔드 서비스', '프라이빗 룸', '중심상권', '품격'],
        img: '/images/venues/roomsalon_5.webp',
    }
];

const faqList = [
    {
        question: `${region.name} 룸살롱 1인 방문도 가능한가요?`,
        answer: "네, 가능합니다. 도심 비즈니스 방문객 이용이 많아 도시형 응대로 1:1 시작도 부담 없이 안내합니다."
    },
    {
        question: `${region.name} 룸살롱 픽업은 어디까지 지원되나요?`,
        answer: `픽업은 ${region.name} 주요 역 및 중심 상권에서 운영됩니다. 정확한 동선은 예약 시 조율해 드립니다.`
    },
    {
        question: `${region.name} 룸살롱 주대/TC 기준이 궁금해요.`,
        answer: "주대 18만원 이상, TC 10만원 이상 기준이며 시간·코스·인원에 따라 달라질 수 있습니다. 상세는 문의 부탁드립니다."
    }
];

const sections = [
    { id: "definition", title: "1. 룸살롱이란?" },
    { id: "recommendation", title: "2. 추천 업소" },
    { id: "system", title: "3. 이용 시스템 및 특징" },
    { id: "faq", title: "4. 이용 꿀팁 및 FAQ" }
];
---

<PageLayout {...seoProps} region={region}>
    <LocalBusinessSchema region={region} />
    <BreadcrumbSchema region={region} />
    <HowToSchema
        name={`${region.name} 룸살롱 예약 방법`}
        description="4단계로 완료하는 룸살롱 예약 가이드. 사전 예약부터 프라이빗 초이스까지."
        steps={reservationSteps}
    />
    <FAQPageSchema items={faqList} />

    <div class="pt-24 md:pt-32 min-h-screen bg-transparent">
        <div class="container mx-auto px-4 pb-12 max-w-6xl">
            <!-- Section Title -->
            <div class="text-center mb-16 relative">
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-24 h-24 bg-red-500/10 rounded-full blur-2xl"></div>
                <span class="text-red-500 font-bold tracking-[0.2em] text-sm md:text-base uppercase mb-3 animate-fade-in-up block">전략과 매너</span>
                <h1 class="text-4xl md:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-red-400 to-rose-600 relative z-10 animate-fade-in-up delay-100 drop-shadow-sm">{region.name} 룸살롱(프리미엄 클럽) 비즈니스 접대 가이드</h1>
                <div class="w-1 h-12 bg-gradient-to-b from-amber-500 to-transparent mx-auto mt-6"></div>
            </div>

            <!-- Intro Text -->
            <div class="mb-20 text-center max-w-4xl mx-auto animate-fade-in-up delay-200">
                <p class="text-xl text-slate-300 leading-relaxed font-light">
                    {region.name} 룸살롱은 비즈니스 라인에 맞춘 프라이빗 세팅입니다.<br />
                    조용한 대화와 접대를 우선으로 원하는 스타일을 맞춰드립니다.<br />
                    주대 18만원 이상·TC 10만원 이상 기준이며 상세 견적은 문의 부탁드립니다.
                </p>
            </div>

            <TableOfContents sections={sections} />

            <!-- 1. Definition - Featured Snippet Optimized -->
            <div id="definition" class="mb-12 bg-slate-900/30 p-8 rounded-2xl border border-slate-800/50 backdrop-blur-sm hover:border-red-500/20 transition-colors animate-fade-in-up delay-300">
                <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
                    <div class="w-1.5 h-8 bg-red-500 rounded-full"></div>
                    1. {region.name} 룸살롱이란?
                </h2>
                <div class="text-slate-300 leading-relaxed text-lg font-light space-y-4">
                    <!-- Snippet-optimized definition (40-60 words) -->
                    <div class="bg-slate-800/40 border-l-4 border-red-500 p-4 rounded mb-6">
                        <p class="text-white font-semibold mb-2">정의</p>
                        <p>
                            <strong>{region.name} 룸살롱은 비즈니스 접대에 특화된 프라이빗 클럽으로, 하이퍼블릭보다 한 차원 높은 서비스와 수질을 제공합니다.</strong> 철저한 회원제·예약제로 조용하고 품격 있는 분위기를 유지하며, 중요한 고객 접대나 비즈니스 미팅에 최적화되어 있습니다.
                        </p>
                    </div>
                    <p>
                        {region.name} 룸살롱은 비즈니스 접대에 특화된 프라이빗 클럽으로, 하이퍼블릭보다 한 차원 높은 서비스와 수질을 제공합니다. 철저한 회원제와 예약제를 통해 조용하고 품격 있는 분위기를 유지하며, 바이어 접대나 중요한 계약 회의에 적합합니다.
                    </p>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
                        <div class="bg-slate-800/50 p-4 rounded-xl border border-slate-700 text-center">
                            <Crown class="mx-auto text-red-500 mb-2" />
                            <div class="font-bold text-white">VVIP 접대 특화</div>
                        </div>
                        <div class="bg-slate-800/50 p-4 rounded-xl border border-slate-700 text-center">
                            <Shield class="mx-auto text-red-500 mb-2" />
                            <div class="font-bold text-white">철저한 보안/프라이빗</div>
                        </div>
                        <div class="bg-slate-800/50 p-4 rounded-xl border border-slate-700 text-center">
                            <Star class="mx-auto text-red-500 mb-2" />
                            <div class="font-bold text-white">최상위 매니저</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 1-1. 룸살롱 예약 흐름 - Step Snippet -->
            <div class="mb-12 bg-slate-900/30 p-8 rounded-2xl border border-slate-800/50 backdrop-blur-sm hover:border-red-500/20 transition-colors">
                <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-3">
                    <div class="w-1.5 h-6 bg-red-500 rounded-full"></div>
                    룸살롱 예약부터 입장까지 (4단계)
                </h3>
                <ol class="list-decimal pl-6 space-y-3 text-slate-300">
                    <li><strong>사전 예약</strong> - 100% 예약제 운영, 워킹 방문 제한</li>
                    <li><strong>목적 공유</strong> - 비즈니스/회식/모임 등 방문 목적 미리 알림</li>
                    <li><strong>맞춤 세팅</strong> - 손님 취향에 맞춘 룸·주류·안주 준비</li>
                    <li><strong>프라이빗 초이스</strong> - 룸 내에서 마담 인솔 하 직접 초이스</li>
                </ol>
            </div>

            <!-- 2. Recommendations -->
            <div id="recommendation" class="mb-24 animate-fade-in-up delay-300">
                <div class="flex items-center gap-3 mb-8">
                    <div class="w-1.5 h-8 bg-red-500 rounded-full"></div>
                    <h2 class="text-3xl font-bold text-white">2. 추천 업소 (Recommendations)</h2>
                </div>
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
                    {venues.map(venue => <VenueCard venue={venue} color="red" />)}
                </div>
                
                <!-- Gallery -->
                <div class="mt-16">
                    <h3 class="text-2xl font-bold text-white mb-8 flex items-center gap-3">
                        <Sparkles class="text-red-500" /> {region.name} 룸살롱 갤러리
                    </h3>
                    <div class="grid grid-cols-3 gap-4">
                         {[1, 2, 3].map((i) => (
                            <div class="aspect-[3/4] rounded-2xl overflow-hidden border border-slate-800 hover:border-red-500/50 transition-all duration-300 group">
                                <img src={`/images/venues/roomsalon_${i}.webp`} alt={`${region.name} 룸살롱 프리미엄 클럽 비즈니스 접대 라운지 인테리어 ${i}`} loading="lazy" width="300" height="400"
                                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" />
                            </div>
                        ))}
                    </div>
                </div>
            </div>

            <!-- 3. System - Pricing & Service Structure -->
            <div id="system" class="mb-12 bg-slate-900/30 p-8 rounded-2xl border border-slate-800/50 backdrop-blur-sm hover:border-red-500/20 transition-colors animate-fade-in-up delay-300">
                <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
                    <div class="w-1.5 h-8 bg-red-500 rounded-full"></div>
                    3. 이용 시스템 및 특징
                </h2>
                <div class="text-slate-300 leading-relaxed text-lg font-light space-y-4">
                    <div class="bg-slate-800/30 p-4 rounded-lg mb-6 border border-slate-700">
                        <p class="text-sm text-slate-400">룸살롱은 일반 유흥업소와는 차별화된 프리미엄 비즈니스 접대 시스템으로 운영됩니다.</p>
                    </div>

                    <h4 class="text-xl font-bold text-white mt-8 mb-4">A. 예약 및 입장</h4>
                    <ol class="list-decimal pl-6 space-y-2 text-slate-300 marker:text-red-500">
                        <li><strong>100% 예약제</strong>: 워킹 방문은 입장이 제한될 수 있습니다. 반드시 서우 실장을 통해 사전 예약해 주세요.</li>
                        <li><strong>맞춤형 세팅</strong>: 방문 목적(비즈니스, 회식, 개인 모임)을 미리 알려주면 그에 맞는 룸·주류·안주를 세팅합니다.</li>
                        <li><strong>프라이빗 보장</strong>: 철저한 보안 및 프라이빗 환경을 최우선으로 운영합니다.</li>
                    </ol>

                    <h4 class="text-xl font-bold text-white mt-8 mb-4">B. 초이스 및 서비스</h4>
                    <ol class="list-decimal pl-6 space-y-2 text-slate-300 marker:text-red-500">
                        <li><strong>정통 초이스</strong>: 마담의 인솔 하에 룸에서 직접 초이스가 이루어집니다.</li>
                        <li><strong>지명제 운영</strong>: 마음에 드는 매니저를 사전에 지명하여 예약하실 수 있습니다.</li>
                        <li><strong>애프터 케어</strong>: 비즈니스 성공을 위해 담당 매니저가 끝까지 최선을 다해 케어합니다.</li>
                    </ol>

                    <h4 class="text-xl font-bold text-white mt-8 mb-4">C. 가격 체계</h4>
                    <div class="overflow-x-auto">
                        <table class="w-full text-left border-collapse mt-3">
                            <thead>
                                <tr class="border-b border-slate-700 text-red-400">
                                    <th class="py-3 px-4">항목</th>
                                    <th class="py-3 px-4">설명</th>
                                    <th class="py-3 px-4">기준 가격</th>
                                </tr>
                            </thead>
                            <tbody class="text-sm">
                                <tr class="border-b border-slate-800 hover:bg-slate-800/30 transition">
                                    <td class="py-3 px-4 font-bold text-white">주대</td>
                                    <td class="py-3 px-4">주류 + 안주 (시간 기준)</td>
                                    <td class="py-3 px-4 font-semibold text-red-400">18만원+</td>
                                </tr>
                                <tr class="border-b border-slate-800 hover:bg-slate-800/30 transition">
                                    <td class="py-3 px-4 font-bold text-white">TC (Total Charge)</td>
                                    <td class="py-3 px-4">매니저 서빙 및 서비스 비용</td>
                                    <td class="py-3 px-4 font-semibold text-red-400">10만원+</td>
                                </tr>
                                <tr class="border-b border-slate-800 hover:bg-slate-800/30 transition">
                                    <td class="py-3 px-4 font-bold text-white">룸 타입</td>
                                    <td class="py-3 px-4">프라이빗 라운지형 (표준)</td>
                                    <td class="py-3 px-4 font-semibold text-red-400">추가 비용 없음</td>
                                </tr>
                                <tr class="border-b border-slate-800 hover:bg-slate-800/30 transition">
                                    <td class="py-3 px-4 font-bold text-white">지명 수수료</td>
                                    <td class="py-3 px-4">특정 매니저 지명 (선택사항)</td>
                                    <td class="py-3 px-4 font-semibold text-red-400">추가 비용 없음</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <p class="text-xs text-slate-500 mt-2">* 위 가격은 {region.name} 평균 기준이며, 시간·인원·특별 요청에 따라 변동될 수 있습니다.</p>
                </div>
            </div>

            <!-- 4. FAQ - Enhanced with Snippet Optimization -->
            <div id="faq" class="mb-20 animate-fade-in-up delay-300">
                <h2 class="text-3xl font-bold text-white mb-8 flex items-center gap-3">
                    <div class="w-1.5 h-8 bg-red-500 rounded-full"></div>
                    4. 이용 꿀팁 및 FAQ
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-10 mb-10">
                    <div class="bg-slate-900/50 p-8 rounded-2xl border border-slate-800">
                        <h3 class="text-2xl font-bold text-white mb-6 flex items-center gap-2">
                            <Star class="text-red-500" /> 서우실장의 접대 Tip
                        </h3>
                        <ul class="space-y-4 text-slate-300 font-light">
                            <li class="flex gap-3">
                                <CheckCircle class="text-red-500 w-5 h-5 flex-shrink-0" />
                                <span><strong>사전 정보 공유</strong>: 접대하시는 손님의 취향(술, 스타일 등)을 미리 알려주시면 성공률 200%의 맞춤형 서비스를 준비합니다.</span>
                            </li>
                            <li class="flex gap-3">
                                <CheckCircle class="text-red-500 w-5 h-5 flex-shrink-0" />
                                <span><strong>프라이빗 룸</strong>: {region.name} 비즈니스 방문은 프라이빗 룸 우선 배정이 가능합니다.</span>
                            </li>
                            <li class="flex gap-3">
                                <CheckCircle class="text-red-500 w-5 h-5 flex-shrink-0" />
                                <span><strong>조용한 환경</strong>: 협상이나 중요한 회의가 필요하신 경우, 음악 볼륨을 낮춰달라고 요청하실 수 있습니다.</span>
                            </li>
                        </ul>
                    </div>

                    <div class="bg-red-900/10 p-8 rounded-2xl border border-red-500/20">
                        <h3 class="text-2xl font-bold text-white mb-6 flex items-center gap-2">
                            <HelpCircle class="text-red-500" /> 자주 묻는 질문
                        </h3>
                        <div class="space-y-6">
                            {faqList.map((faq, idx) => (
                                <div class="pb-4 border-b border-slate-700/50 last:border-b-0">
                                    <p class="font-bold text-red-400 mb-2 text-sm">Q{idx + 1}. {faq.question}</p>
                                    <p class="text-slate-300 text-sm leading-relaxed">A. {faq.answer}</p>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>

                <!-- Additional FAQ Schema Content - Snippet Candidates -->
                <div class="bg-slate-900/30 p-8 rounded-2xl border border-slate-800/50 backdrop-blur-sm">
                    <h3 class="text-xl font-bold text-white mb-6">룸살롱 이용 시 자주 묻는 비즈니스 에티켓</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="bg-slate-800/30 p-4 rounded-lg">
                            <p class="font-bold text-red-400 mb-2">룸살롱은 몇 시까지 운영하나요?</p>
                            <p class="text-slate-300 text-sm">대부분의 룸살롱은 저녁 6시부터 다음날 오전 2-5시까지 운영됩니다. 조용한 비즈니스 분위기를 유지하기 위해 늦은 시간보다는 저녁 시간 이용을 권장합니다.</p>
                        </div>
                        <div class="bg-slate-800/30 p-4 rounded-lg">
