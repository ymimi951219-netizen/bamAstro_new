---
import { PageLayout, LocalBusinessSchema, FAQPageSchema, BreadcrumbSchema, BackToPillar, RelatedPosts } from '@bamastro/ui';
import { region } from '@/config/region';
import { Phone, ChevronRight, ShieldCheck } from 'lucide-astro';

export function getStaticPaths() {
  return [
    { params: { region: region.id } },
  ];
}

const { region: regionId } = Astro.params;

const faqList = [
    {
        question: `${region.name} 룸살롱의 특징은 무엇인가요?`,
        answer: "조용한 대화와 비즈니스 접대에 초점을 둔 프라이빗 룸 중심 서비스입니다."
    },
    {
        question: "접대나 회의 목적도 가능한가요?",
        answer: "네. 도심 비즈니스 방문객 접대 수요가 많아 비즈니스 라운지 타입도 운영합니다."
    },
    {
        question: "픽업 지원은 어디까지 되나요?",
        answer: `${region.name} 주요 역 및 중심 상권에서 운영됩니다.`
    },
    {
        question: "주대/TC 기준은 어떻게 되나요?",
        answer: "주대 18만원 이상, TC 10만원 이상 기준이며 코스에 따라 달라집니다."
    },
    {
        question: "예약은 필수인가요?",
        answer: "원활한 룸 배정을 위해 사전 예약을 권장합니다."
    },
    {
        question: "복장에 제한이 있나요?",
        answer: "비즈니스 목적이라면 포멀한 복장이 추천되며, 일반 캐주얼도 가능합니다."
    }
];

const seoProps = {
  title: `${region.name} 룸살롱 FAQ | 자주 묻는 질문과 답변`,
  description: `${region.name} 룸살롱 자주 묻는 질문 완벽 해답. 비즈니스 접대·예약·가격·에티켓 기본 정보. 전문가가 답변합니다. 초보자 필독!`,
  keywords: [`${region.name} 룸살롱 FAQ`, `${region.name} 룸살롱 자주 묻는 질문`, `${region.name} 룸살롱 예약`, `${region.name} 룸살롱 접대`],
};

const relatedItems = [
  {
    title: `${region.name} 룸살롱 완벽 가이드`,
    href: `/${region.id}-room-salon-guide`,
    description: '룸살롱 시스템, 가격, 추천 업소 정보',
    category: '룸살롱'
  },
  {
    title: `${region.name} 하이퍼블릭 가이드`,
    href: `/${region.id}-highpublic-guide`,
    description: '프라이빗 펍, 비즈니스 접대에 최적',
    category: '하이퍼블릭'
  },
  {
    title: `${region.name} 기모노룸 가이드`,
    href: `/${region.id}-kimono-room-guide`,
    description: '이색 테마, 기모노룸 완벽 가이드',
    category: '기모노룸'
  },
];
---

<PageLayout {...seoProps} region={region}>
    <LocalBusinessSchema region={region} />
    <BreadcrumbSchema region={region} />
    <FAQPageSchema items={faqList} />

    <div class="pt-24 md:pt-32 min-h-screen bg-transparent px-4 pb-20">
        <div class="container mx-auto max-w-4xl">
            <BackToPillar
                href={`/${region.id}-room-salon-guide`}
                title={`${region.name} 룸살롱 완벽 가이드`}
                description="가격, 시스템, 추천 업소 정보 모두 보기"
                accentColor="amber"
            />

            <div class="text-center mb-16">
                <div class="flex justify-center mb-4">
                    <ShieldCheck class="w-12 h-12 text-amber-600 opacity-80" />
                </div>
                <h1 class="text-3xl md:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-amber-200 to-amber-700 mb-6">
                    비즈니스 접대 & FAQ
                </h1>
                <p class="text-slate-400 text-lg leading-relaxed max-w-2xl mx-auto">
                    중요한 바이어를 모시는 자리, 실수하면 안 되니까.<br />
                    <strong class="text-white">서우실장</strong>이 접대의 A to Z를 상세히 안내해 드립니다.
                </p>
            </div>

            <div class="grid gap-6">
                {faqList.map((item) => (
                    <div class="bg-slate-900/50 p-6 rounded-2xl border border-slate-800 hover:border-amber-600/30 transition-all duration-300">
                        <h3 class="text-lg md:text-xl font-bold text-amber-600 mb-3 flex items-start gap-2">
                            <span class="bg-amber-600/10 p-1 rounded text-sm mt-1">Q</span>
                            {item.question}
                        </h3>
                        <p class="text-slate-300 leading-relaxed pl-8">
                            <span class="font-bold text-slate-500 mr-2">A.</span>
                            {item.answer}
                        </p>
                    </div>
                ))}
            </div>

            <div class="mt-16 text-center">
                <div class="flex flex-col md:flex-row justify-center gap-4">
                    <button onclick={`window.location.href = 'tel:${region.phone}'`} class="bg-gradient-to-r from-amber-700 to-amber-800 hover:from-amber-600 hover:to-amber-700 text-white font-bold py-4 px-8 rounded-xl flex items-center justify-center gap-2 transition-all shadow-lg">
                        <Phone size={20} /> 접대 견적 상담
                    </button>
                    <a href={`/${region.id}-room-salon-guide`} class="bg-slate-800 hover:bg-slate-700 text-white font-bold py-4 px-8 rounded-xl flex items-center justify-center gap-2 transition-all">
                        <ChevronRight size={20} /> {region.name} 룸살롱 정보 더보기
                    </a>
                </div>
            </div>

            <RelatedPosts items={relatedItems} title="다른 업종도 확인해보세요" accentColor="amber" />
        </div>
    </div>
</PageLayout>
