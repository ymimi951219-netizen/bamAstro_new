---
import { PageLayout, LocalBusinessSchema, BreadcrumbSchema, HowToSchema, FAQPageSchema, VenueCard, TableOfContents, RelatedServices } from '@bamastro/ui';
import { region } from '@/config/region';
import { Sparkles, DollarSign, Users, Star, HelpCircle, Phone, CheckCircle, ChevronRight, MapPin } from 'lucide-astro';

export function getStaticPaths() {
  return [
    { params: { region: region.id } },
  ];
}

const { region: regionId } = Astro.params;
const venueType = region.venueTypes.find(v => v.id === 'highpublic');

if (!venueType) {
  throw new Error(`Venue type 'highpublic' not found in region config`);
}

const seoProps = {
  title: `${region.name} 프라이빗 펍(하이퍼블릭) 완벽 가이드 | 가격·예약·시스템`,
  description: `${region.name} 하이퍼블릭(프라이빗 펍) 최신 가이드. ${region.nearbyStations.slice(0,2).join('·')} 중심 추천 업소, 초이스 시스템, 가격, 예약 방법 상세 안내. 1인 방문 OK, 무료 픽업.`,
  keywords: [
    `${region.name} 하이퍼블릭`,
    `${region.name} 프라이빗 펍`,
    `${region.name} 하이퍼블릭 예약`,
    `${region.name} 하이퍼블릭 가격`,
    `${region.name} 하이퍼블릭 초보자 가이드`
  ],
};

const venues = [
    {
        id: 'hp-1',
        name: `${region.name} 하이퍼블릭 프리미엄`,
        type: 'Premium High-End',
        location: `${region.nearbyStations[0]} 인근`,
        price: '주대 18만원 이상, TC 10만원 이상',
        desc: `${region.name} 중심의 도시형 하이퍼블릭. 도심 비즈니스 방문객의 조용한 접대/술자리에 맞춘 프라이빗 라운지.`,
        features: ['프라이빗 예약', '조용한 라운지', `${region.nearbyStations[0]} 접근`, '비즈니스 동선'],
        img: '/images/venues/highpublic_5.webp',
    },
    {
        id: 'hp-2',
        name: `${region.name} 하이퍼블릭 라운지`,
        type: 'Mega Size',
        location: `${region.nearbyStations[1]} 인근`,
        price: '주대 18만원 이상, TC 10만원 이상',
        desc: `${region.nearbyStations[1]} 인근 대형 구성. 중심 상권 분위기와 파티형 세팅으로 단체 모임에 적합.`,
        features: ['대형 룸', '파티 조명', `${region.nearbyStations[1]} 중심`, '단체 환영'],
        img: '/images/venues/highpublic_6.webp',
    }
];

const faqList = [
    {
        question: `${region.name} 하이퍼블릭 1인 방문도 가능한가요?`,
        answer: `네, 가능합니다. ${region.name} 상권은 도심 비즈니스 방문객 이용이 많아 도시형 응대로 1:1 시작도 부담 없이 안내합니다.`
    },
    {
        question: `${region.name} 하이퍼블릭 픽업은 어디까지 지원되나요?`,
        answer: `픽업은 ${region.nearbyStations.slice(0,3).join(', ')} 중심으로 운영됩니다. 정확한 동선은 예약 시 조율해 드립니다.`
    },
    {
        question: `${region.name} 하이퍼블릭 주대/TC 기준이 궁금해요.`,
        answer: "주대 18만원 이상, TC 10만원 이상 기준이며 시간·코스·인원에 따라 달라질 수 있습니다. 상세는 문의 부탁드립니다."
    }
];

const sections = [
    { id: "definition", title: "1. 하이퍼블릭이란?" },
    { id: "recommendation", title: "2. 추천 업소 TOP 2" },
    { id: "system", title: "3. 이용 시스템 및 가이드" },
    { id: "faq", title: "4. 이용 꿀팁 및 FAQ" }
];

// HowTo Schema steps - 하이퍼블릭 이용 흐름
const usageSteps = [
  { name: "예약", text: "원하는 시간, 인원, 주류 종류 및 방문 목적을 서우실장에게 전달합니다." },
  { name: "픽업", text: "예약 시간에 맞춰 지정 장소에서 픽업 서비스를 이용하실 수 있습니다." },
  { name: "룸 배정", text: "프라이빗 룸이 세팅되어 입장 후 기본 주류와 안주가 제공됩니다." },
  { name: "초이스", text: "매직미러, 조별, 무한 초이스 중 원하는 방식으로 매니저를 선택합니다." },
  { name: "타임 진행", text: "기본 80-90분 타임이 진행되며, 연장이 가능합니다." }
];
---

<PageLayout {...seoProps} region={region}>
    <LocalBusinessSchema region={region} />
    <BreadcrumbSchema region={region} />
    <HowToSchema
        name={`${region.name} 하이퍼블릭 이용 방법`}
        description="5단계로 완료하는 하이퍼블릭 이용 가이드. 예약부터 타임 진행까지 완벽 안내."
        steps={usageSteps}
    />
    <FAQPageSchema items={faqList} />

    <div class="pt-24 md:pt-32 min-h-screen bg-transparent">
        <div class="container mx-auto px-4 pb-12 max-w-6xl">
            <!-- Section Title -->
            <div class="text-center mb-16 relative">
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-24 h-24 bg-amber-500/10 rounded-full blur-2xl"></div>
                <span class="text-amber-400 font-bold tracking-[0.2em] text-sm md:text-base uppercase mb-3 animate-fade-in-up block">선택과 이해</span>
                <h1 class="text-4xl md:text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-white via-slate-200 to-slate-400 relative z-10 animate-fade-in-up delay-100 drop-shadow-sm">{region.name} 프라이빗 펍(하이퍼블릭) 완벽 가이드</h1>
                <div class="w-1 h-12 bg-gradient-to-b from-amber-500 to-transparent mx-auto mt-6"></div>
            </div>

            <!-- Intro Text -->
            <div class="mb-20 text-center max-w-4xl mx-auto animate-fade-in-up delay-200">
                <p class="text-xl text-slate-300 leading-relaxed font-light">
                    {region.name} 하이퍼블릭은 {region.nearbyStations.slice(0,2).join('·')} 중심으로 도심 비즈니스 방문객 맞춤 코스를 제공합니다.<br />
                    도시형 무드의 프라이빗 룸과 안정적인 동선, 주대 18만원 이상·TC 10만원 이상 기준으로 안내합니다.<br />
                    상세 견적은 문의 부탁드립니다.
                </p>
            </div>

            <TableOfContents sections={sections} />

            <!-- 1. Definition - Featured Snippet Optimized -->
            <div id="definition" class="mb-12 bg-slate-900/30 p-8 rounded-2xl border border-slate-800/50 backdrop-blur-sm hover:border-amber-500/20 transition-colors animate-fade-in-up delay-300">
                <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
                    <div class="w-1.5 h-8 bg-amber-500 rounded-full"></div>
                    1. {region.name} 하이퍼블릭이란?
                </h2>
                <div class="text-slate-300 leading-relaxed text-lg font-light space-y-4">
                    <!-- Snippet-optimized definition (40-60 words) -->
                    <p>
                        <strong>{region.name} 하이퍼블릭은 프라이빗 룸 문화를 도입한 모던 라운지로, 기존 펍의 오픈된 바 카운터 대신 독립된 룸에서 매직미러·조별·무한 초이스 시스템을 제공합니다.</strong> 모던한 인테리어와 선택형 시스템을 결합하여 비즈니스 접대와 개인 모임 모두에 적합합니다.
                    </p>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
                        <div class="bg-slate-800/50 p-4 rounded-xl border border-slate-700 text-center">
                            <Sparkles class="mx-auto text-amber-500 mb-2" />
                            <div class="font-bold text-white">다양한 스타일</div>
                        </div>
                        <div class="bg-slate-800/50 p-4 rounded-xl border border-slate-700 text-center">
                            <DollarSign class="mx-auto text-amber-500 mb-2" />
                            <div class="font-bold text-white">투명한 가격 구조</div>
                        </div>
                        <div class="bg-slate-800/50 p-4 rounded-xl border border-slate-700 text-center">
                            <Users class="mx-auto text-amber-500 mb-2" />
                            <div class="font-bold text-white">취향 기반 선택</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 1-1. 하이퍼블릭 이용 흐름 - Step Snippet -->
            <div class="mb-12 bg-slate-900/30 p-8 rounded-2xl border border-slate-800/50 backdrop-blur-sm hover:border-amber-500/20 transition-colors">
                <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-3">
                    <div class="w-1.5 h-6 bg-amber-500 rounded-full"></div>
                    하이퍼블릭 이용 흐름 (5단계)
                </h3>
                <ol class="list-decimal pl-6 space-y-3 text-slate-300">
                    <li><strong>예약</strong> - 시간, 인원, 주류 종류 및 방문 목적을 전달</li>
                    <li><strong>픽업</strong> - 예약 시간에 맞춰 지정 장소에서 픽업 서비스 이용</li>
                    <li><strong>룸 배정</strong> - 프라이빗 룸 세팅 및 기본 주류·안주 제공</li>
                    <li><strong>초이스</strong> - 매직미러, 조별, 무한 초이스 중 선택</li>
                    <li><strong>타임 진행</strong> - 기본 80-90분 타임, 연장 가능</li>
                </ol>
            </div>

            <!-- 2. Recommendations -->
            <div id="recommendation" class="mb-24 animate-fade-in-up delay-300">
                <div class="flex items-center gap-3 mb-8">
                    <div class="w-1.5 h-8 bg-amber-500 rounded-full"></div>
                    <h2 class="text-3xl font-bold text-white">2. {region.name} 하이퍼블릭 추천 TOP 2</h2>
                </div>
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
                    {venues.map(venue => <VenueCard venue={venue} color="amber" />)}
                </div>
                
                <!-- Gallery -->
                <div class="mt-16">
                    <h3 class="text-2xl font-bold text-white mb-8 flex items-center gap-3">
                        <Sparkles class="text-amber-500" /> {region.name} 하이퍼블릭 갤러리
                    </h3>
                    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
                        {[1, 2, 3, 4].map((i) => (
                            <div class="aspect-[3/4] rounded-2xl overflow-hidden border border-slate-800 hover:border-amber-500/50 transition-all duration-300 group">
                                <img src={`/images/venues/highpublic_${i}.webp`} alt={`${region.name} 프라이빗 펍 하이퍼블릭 프리미엄 라운지 인테리어 ${i}`} loading="lazy" width="300" height="400"
                                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" />
                            </div>
                        ))}
                    </div>
                </div>
            </div>

            <!-- 3. System -->
            <div id="system" class="mb-12 bg-slate-900/30 p-8 rounded-2xl border border-slate-800/50 backdrop-blur-sm hover:border-amber-500/20 transition-colors animate-fade-in-up delay-300">
                <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
                    <div class="w-1.5 h-8 bg-amber-500 rounded-full"></div>
                    3. 이용 시스템 및 가이드
                </h2>
                <div class="text-slate-300 leading-relaxed text-lg font-light space-y-4">
                    <p>
                        {region.name} 하이퍼블릭을 처음 방문하시나요? 투명한 이용을 위해 기본적인 시스템을 안내해 드립니다. 대부분의 업소가 비슷한 룰을 따르고 있으나, <strong>서우실장</strong>을 통해 예약하시면 더욱 특별한 혜택을 받으실 수 있습니다.
                    </p>

                    <h4 class="text-xl font-bold text-white mt-8 mb-4">A. 초이스 시스템 (Choice)</h4>
                    <ul class="list-disc pl-5 space-y-2 marker:text-amber-500">
                        <li><strong>매직미러 초이스</strong>: 룸 안에서 유리를 통해 밖의 매니저들을 보며 초이스하는 시스템이 대세입니다. 매니저들은 고객을 볼 수 없어, 고객님은 더욱 편안하게 이상형을 고르실 수 있습니다.</li>
                        <li><strong>조별 초이스</strong>: 5~10명씩 조를 이루어 룸으로 입장하여 인사를 드립니다. 마음에 드는 매니저가 있다면 그 자리에서 바로 앉히시면 됩니다.</li>
                        <li><strong>무한 초이스</strong>: 마음에 드는 매니저가 있을 때까지, 횟수 제한 없이 초이스를 보여드립니다.</li>
                    </ul>

                    <h4 class="text-xl font-bold text-white mt-8 mb-4">B. 타임 및 로테이션</h4>
                    <ul class="list-disc pl-5 space-y-2 marker:text-amber-500">
                        <li>기본 타임은 <strong>80분 ~ 90분</strong> 기준입니다.</li>
                        <li>연장(T/C) 시 1시간 단위로 추가됩니다.</li>
                        <li>하이퍼블릭은 <strong>고정(묶음)</strong>이 가능하여, 파트너가 중간에 방을 옮기지 않고 끝까지 고객님만 케어하도록 할 수 있습니다. (예약 시 문의 필수)</li>
                    </ul>

                     <h4 class="text-xl font-bold text-white mt-8 mb-4">C. 주대 및 가격 (Pricing)</h4>
                     <div class="overflow-x-auto">
                        <table class="w-full text-left border-collapse mt-2">
                            <thead>
                                <tr class="border-b border-slate-700 text-amber-500">
                                    <th class="py-3 px-4">항목</th>
                                    <th class="py-3 px-4">내용</th>
                                    <th class="py-3 px-4">비고</th>
                                </tr>
                            </thead>
                            <tbody class="text-sm">
                                <tr class="border-b border-slate-800">
                                    <td class="py-3 px-4 font-bold">기본 주대</td>
                                    <td class="py-3 px-4">12년산 위스키 + 과일안주 + 맥주/음료</td>
                                    <td class="py-3 px-4">현금가 기준 할인 가능, 시간대별 상이</td>
                                </tr>
                                <tr class="border-b border-slate-800">
                                    <td class="py-3 px-4 font-bold">봉사료 (T/C)</td>
                                    <td class="py-3 px-4">매니저 1인당 타임비</td>
                                    <td class="py-3 px-4">주대 18만원 이상 (업소별 상이)</td>
                                </tr>
                                <tr class="border-b border-slate-800">
                                    <td class="py-3 px-4 font-bold">웨이터 팁 (W/T)</td>
                                    <td class="py-3 px-4">룸 담당 서빙 봉사료</td>
                                    <td class="py-3 px-4">현장 안내</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <p class="text-xs text-slate-500 mt-2">* 위 가격은 평균적인 시세이며, 업소 상황 및 이벤트에 따라 변동될 수 있습니다. 정확한 견적은 전화 문의 바랍니다.</p>
                </div>
            </div>

            <!-- 4. FAQ -->
            <div id="faq" class="grid grid-cols-1 md:grid-cols-2 gap-10 mb-20 animate-fade-in-up delay-300">
                <div class="bg-slate-900/50 p-8 rounded-2xl border border-slate-800">
                    <h3 class="text-2xl font-bold text-white mb-6 flex items-center gap-2">
                        <Star class="text-amber-500" /> 서우실장의 이용 꿀팁
                    </h3>
                    <ol class="list-decimal pl-5 space-y-4 text-slate-300 marker:text-amber-500 font-light">
                        <li><strong class="text-white">피크타임 피하기</strong>: 밤 10시~12시는 가장 붐비는 시간입니다. 8~9시 일찍 오시거나, 1시 이후 늦은 시간에 오시면 훨씬 좋은 수질의 매니저들을 여유롭게 보실 수 있습니다.</li>
                        <li><strong class="text-white">예약은 필수</strong>: 워킹(예약 없이 방문) 방문 시 대기 시간이 길어지거나, 좋은 방을 배정받기 어렵습니다. 출발 전 전화 한 통으로 룸과 매니저 현황을 체크하세요.</li>
                        <li><strong class="text-white">취향 확실히 말하기</strong>: "알아서 해주세요" 보다는 "청순한 스타일", "대화가 잘 통하는 스타일", "술 잘 마시는 스타일" 등 구체적으로 말씀해 주시면 내상 확률이 0%가 됩니다.</li>
                    </ol>
                </div>

                <div class="bg-amber-900/10 p-8 rounded-2xl border border-amber-500/20">
                    <h3 class="text-2xl font-bold text-white mb-6 flex items-center gap-2">
                        <HelpCircle class="text-amber-500" /> 자주 묻는 질문 (FAQ)
                    </h3>
                    <div class="space-y-6">
                        {faqList.map((faq) => (
                            <div>
                                <p class="font-bold text-amber-400 mb-1">Q. {faq.question}</p>
                                <p class="text-slate-300 text-sm">A. {faq.answer}</p>
                            </div>
                        ))}
                    </div>
                    <div class="mt-6 text-center">
                        <a href={`/${region.id}-highpublic-guide/faq`} class="inline-flex items-center gap-2 text-amber-500 hover:text-amber-400 font-bold transition-colors">
                            {region.name} 더 많은 질문과 답변 보기 <ChevronRight size={18} />
                        </a>
                    </div>
                </div>
            </div>

            <!-- CTA -->
            <div class="bg-gradient-to-r from-amber-600 to-amber-700 rounded-3xl p-10 text-center relative overflow-hidden shadow-2xl animate-fade-in-up delay-300">
                <div class="absolute inset-0 bg-opacity-20"></div>
                <h2 class="text-3xl md:text-4xl font-extrabold text-white mb-6 relative z-10">오늘 밤, {region.name}에서 최고의 주인공이 되어보세요</h2>
                <p class="text-amber-100 mb-8 max-w-2xl mx-auto relative z-10">
                    고민은 즐거움만 늦출 뿐입니다. 지금 바로 전화주세요.<br />
                    {region.name} No.1 서우실장이 책임지고 모시겠습니다.
                </p>
                <button onclick={`window.location.href = 'tel:${region.phone}'`} class="bg-white text-amber-800 font-bold py-4 px-12 rounded-full shadow-lg hover:scale-105 transition-transform relative z-10 flex items-center gap-2 mx-auto">
                    <Phone fill="currentColor" size={20} /> {region.phone} 예약하기
                </button>
            </div>

            <RelatedServices region={region} />

        </div>
    </div>
</PageLayout>
