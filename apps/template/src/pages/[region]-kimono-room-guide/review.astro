---
import { PageLayout, BreadcrumbSchema } from '@bamastro/ui';
import { region } from '../../config/region';
import InternalLinkSection from '../../components/InternalLinkSection.astro';
import { getRelatedLinks } from '../../utils/internal-links';
import { getVenueContent } from '../../content';

const venueId = 'kimonoroom';
const venue = region.venueTypes.find(v => v.id === venueId);
const venueName = venue?.name || '기모노룸';
const content = getVenueContent(venueId)!.review;
const title = `${region.name} ${venueName} 리뷰 및 후기 - 실제 방문 후기`;
const description = `${region.name} ${venueName} 실제 방문 후기 모음. 분위기, 서비스, 가격 등 생생한 리뷰를 확인하세요.`;
const links = getRelatedLinks({ type: 'venue-subpage', venueId, subpage: 'review' }, region);

function renderStars(rating: number) {
  return '★'.repeat(rating) + '☆'.repeat(5 - rating);
}
---
<PageLayout title={title} description={description} region={region}>
  <main class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-6 text-white">{region.name} {venueName} 리뷰 및 후기</h1>
    <p class="text-gray-300 mb-8 leading-relaxed">{content.intro}</p>

    <section class="mb-10">
      <h2 class="text-2xl font-semibold mb-4 text-white">종합 평가</h2>
      <div class="bg-gradient-to-br from-amber-500/20 to-amber-600/20 border border-amber-500/30 rounded-lg p-8 text-center">
        <div class="text-6xl font-bold text-amber-400 mb-2">
          {content.aggregateRating.value}
        </div>
        <div class="text-2xl text-amber-300 mb-2">
          {renderStars(Math.round(content.aggregateRating.value))}
        </div>
        <div class="text-gray-300">
          {content.aggregateRating.count}개의 리뷰
        </div>
      </div>
    </section>

    <section class="mb-10">
      <h2 class="text-2xl font-semibold mb-4 text-white">실제 방문 후기</h2>
      <div class="space-y-6">
        {content.reviews.map(review => (
          <div class="bg-gray-800/50 rounded-lg p-6">
            <div class="flex items-center justify-between mb-3">
              <div>
                <div class="text-white font-semibold mb-1">{review.author}</div>
                <div class="text-gray-400 text-sm">{review.date}</div>
              </div>
              <div class="text-amber-400 text-lg">
                {renderStars(review.rating)}
              </div>
            </div>
            <p class="text-gray-300 leading-relaxed">{review.text}</p>
          </div>
        ))}
      </div>
    </section>
  </main>

  <InternalLinkSection links={links} heading="관련 페이지" />
  <BreadcrumbSchema region={region} items={[
    { name: '홈', url: '/' },
    { name: `${venueName} 가이드`, url: `/${region.id}-kimono-room-guide` },
    { name: '리뷰 및 후기', url: '' }
  ]} />
</PageLayout>
