---
import { PageLayout, BreadcrumbSchema, ItemListSchema } from '@bamastro/ui';
import { region } from '../../config/region';
import InternalLinkSection from '../../components/InternalLinkSection.astro';
import { getRelatedLinks } from '../../utils/internal-links';
import { getVenueContent } from '../../content';

const venueId = 'kimonoroom';
const venue = region.venueTypes.find(v => v.id === venueId);
const venueName = venue?.name || '기모노룸';
const content = getVenueContent(venueId)!.ranking;
const title = `${region.name} ${venueName} TOP 5 추천 - 인기 업소 순위`;
const description = `${region.name} ${venueName} 인기 업소 TOP 5 순위. 실제 방문자 평가 기반 추천 목록입니다.`;
const links = getRelatedLinks({ type: 'venue-subpage', venueId, subpage: 'ranking' }, region);
---
<PageLayout title={title} description={description} region={region}>
  <main class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-6 text-white">{region.name} {venueName} TOP 5 추천</h1>
    <p class="text-gray-300 mb-8 leading-relaxed">{content.intro}</p>

    <section class="mb-10">
      <h2 class="text-2xl font-semibold mb-4 text-white">평가 기준</h2>
      <div class="flex flex-wrap gap-2 mb-6">
        {content.criteria.map(criterion => (
          <span class="bg-amber-500/20 text-amber-300 px-3 py-1 rounded-full text-sm">
            {criterion}
          </span>
        ))}
      </div>
    </section>

    <section class="mb-10">
      <h2 class="text-2xl font-semibold mb-4 text-white">추천 업소</h2>
      <div class="space-y-6">
        {content.items.map((item, index) => (
          <div class="bg-gray-800/50 rounded-lg p-6 hover:bg-gray-800/70 transition-colors">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-amber-500 to-amber-600 rounded-lg flex items-center justify-center">
                <span class="text-white font-bold text-xl">#{index + 1}</span>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-white mb-2">{item.name}</h3>
                <p class="text-gray-300 leading-relaxed mb-3">{item.description}</p>
                <div class="flex flex-wrap gap-2">
                  {item.highlights.map(highlight => (
                    <span class="bg-gray-700 text-gray-300 px-2 py-1 rounded text-sm">
                      {highlight}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="mb-10">
      <h2 class="text-2xl font-semibold mb-4 text-white">비교표</h2>
      <div class="overflow-x-auto">
        <table class="w-full border-collapse">
          <thead><tr class="border-b border-gray-700">
              <th class="text-left py-3 px-4 text-gray-400">항목</th>
              {content.items.map(item => (
                <th class="text-left py-3 px-4 text-gray-400">{item.name}</th>
              ))}
            </tr></thead>
          <tbody>
            {content.comparisonTable.map(row => (
              <tr class="border-b border-gray-800">
                <td class="py-3 px-4 text-amber-400 font-bold">{row.feature}</td>
                {row.values.map(val => (
                  <td class="py-3 px-4 text-gray-300">{val}</td>
                ))}
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </section>
  </main>

  <InternalLinkSection links={links} heading="관련 페이지" />
  <ItemListSchema items={content.items.map((item, index) => ({
    position: index + 1,
    name: item.name,
    description: item.description
  }))} />
  <BreadcrumbSchema region={region} items={[
    { name: '홈', url: '/' },
    { name: `${venueName} 가이드`, url: `/${region.id}-kimono-room-guide` },
    { name: 'TOP 5 추천', url: '' }
  ]} />
</PageLayout>
